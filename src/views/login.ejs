<%- include('partials/header', { title: 'Login - Gemini Bank' }) %>

<style>
    /* Premium Login Styles */
    .login-container {
        min-height: 85vh;
        display: flex;
        align-items: center;
        padding: 2rem 0;
        position: relative;
        overflow: hidden;
    }

    .premium-login-card {
        background: rgba(255, 255, 255, 0.08);
        backdrop-filter: blur(25px);
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 28px;
        box-shadow: 
            0 30px 60px rgba(0, 0, 0, 0.2),
            0 0 0 1px rgba(255, 255, 255, 0.05),
            inset 0 1px 0 rgba(255, 255, 255, 0.1);
        padding: 3.5rem 3rem;
        position: relative;
        overflow: hidden;
        animation: loginCardEntrance 1s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        transition: all 0.5s ease;
        max-width: 450px;
        width: 100%;
    }

    @keyframes loginCardEntrance {
        from {
            opacity: 0;
            transform: translateY(60px) scale(0.8) rotateX(10deg);
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1) rotateX(0deg);
        }
    }

    .premium-login-card:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow: 
            0 40px 80px rgba(0, 0, 0, 0.3),
            0 0 0 1px rgba(255, 255, 255, 0.2),
            inset 0 1px 0 rgba(255, 255, 255, 0.2);
    }

    .premium-login-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.15) 0%, rgba(118, 75, 162, 0.15) 100%);
        opacity: 0;
        transition: opacity 0.4s ease;
        pointer-events: none;
        border-radius: 28px;
    }

    .premium-login-card:hover::before {
        opacity: 1;
    }

    /* Animated welcome text */
    .login-title {
        font-size: 2.8rem;
        font-weight: 900;
        background: linear-gradient(135deg, #ffffff 0%, #667eea 40%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-align: center;
        margin-bottom: 1rem;
        position: relative;
        animation: titleSlideIn 1.2s ease-out 0.3s both;
    }

    @keyframes titleSlideIn {
        from { 
            opacity: 0; 
            transform: translateY(-30px) scale(0.9); 
            filter: blur(10px);
        }
        to { 
            opacity: 1; 
            transform: translateY(0) scale(1); 
            filter: blur(0px);
        }
    }

    .login-subtitle {
        color: rgba(255, 255, 255, 0.7);
        text-align: center;
        font-size: 1.1rem;
        font-weight: 400;
        margin-bottom: 2.5rem;
        animation: subtitleFadeIn 1s ease-out 0.6s both;
        line-height: 1.5;
    }

    @keyframes subtitleFadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    /* Enhanced form styling */
    .login-form-group {
        margin-bottom: 2rem;
        position: relative;
        animation: formGroupSlide 0.8s ease-out both;
    }

    .login-form-group:nth-child(1) { animation-delay: 0.8s; }
    .login-form-group:nth-child(2) { animation-delay: 0.9s; }
    .login-form-group:nth-child(3) { animation-delay: 1s; }

    @keyframes formGroupSlide {
        from { opacity: 0; transform: translateX(-40px); }
        to { opacity: 1; transform: translateX(0); }
    }

    .premium-form-label {
        color: rgba(255, 255, 255, 0.9);
        font-weight: 600;
        font-size: 1rem;
        margin-bottom: 0.8rem;
        position: relative;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .premium-login-input {
        background: rgba(255, 255, 255, 0.1);
        border: 2px solid rgba(255, 255, 255, 0.2);
        border-radius: 16px;
        color: white;
        padding: 1.2rem 1.5rem;
        font-size: 1.05rem;
        transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        backdrop-filter: blur(15px);
        position: relative;
        z-index: 2;
        font-weight: 500;
    }

    .premium-login-input:focus {
        background: rgba(255, 255, 255, 0.15);
        border-color: rgba(102, 126, 234, 0.9);
        color: white;
        box-shadow: 
            0 0 0 4px rgba(102, 126, 234, 0.25),
            0 15px 35px rgba(102, 126, 234, 0.2),
            inset 0 1px 0 rgba(255, 255, 255, 0.1);
        transform: translateY(-3px) scale(1.02);
        outline: none;
    }

    .premium-login-input::placeholder {
        color: rgba(255, 255, 255, 0.5);
        font-weight: 400;
        transition: all 0.3s ease;
    }

    .premium-login-input:focus::placeholder {
        color: rgba(255, 255, 255, 0.3);
        transform: translateX(5px);
    }

    /* Enhanced password toggle */
    .password-toggle-container {
        position: relative;
    }

    .password-toggle {
        position: absolute;
        right: 1.2rem;
        top: 50%;
        transform: translateY(-50%);
        color: rgba(255, 255, 255, 0.6);
        cursor: pointer;
        transition: all 0.3s ease;
        padding: 0.5rem;
        border-radius: 50%;
        z-index: 10;
    }

    .password-toggle:hover {
        color: rgba(102, 126, 234, 0.9);
        background: rgba(255, 255, 255, 0.1);
        transform: translateY(-50%) scale(1.1);
    }

    /* Premium login button */
    .btn-premium-login {
        width: 100%;
        padding: 1.3rem;
        font-size: 1.15rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        border: none;
        border-radius: 18px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        position: relative;
        overflow: hidden;
        transition: all 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        box-shadow: 
            0 20px 40px rgba(102, 126, 234, 0.4),
            inset 0 1px 0 rgba(255, 255, 255, 0.2);
        cursor: pointer;
        animation: buttonEntrance 0.8s ease-out 1.1s both;
    }

    @keyframes buttonEntrance {
        from { opacity: 0; transform: translateY(30px) scale(0.8); }
        to { opacity: 1; transform: translateY(0) scale(1); }
    }

    .btn-premium-login::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.8s ease;
    }

    .btn-premium-login:hover::before {
        left: 100%;
    }

    .btn-premium-login:hover {
        transform: translateY(-4px) scale(1.03);
        box-shadow: 
            0 30px 60px rgba(102, 126, 234, 0.6),
            inset 0 1px 0 rgba(255, 255, 255, 0.3);
        background: linear-gradient(135deg, #7c8cee 0%, #8a5fb8 100%);
    }

    .btn-premium-login:active {
        transform: translateY(-1px) scale(0.98);
        box-shadow: 0 15px 30px rgba(102, 126, 234, 0.4);
    }

    .btn-premium-login:disabled {
        background: rgba(255, 255, 255, 0.1);
        color: rgba(255, 255, 255, 0.4);
        cursor: not-allowed;
        transform: none;
        box-shadow: none;
    }

    /* Register link styling */
    .register-link {
        text-align: center;
        margin-top: 2.5rem;
        animation: linkFadeIn 1s ease-out 1.3s both;
        padding: 1.5rem 0;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    @keyframes linkFadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .register-link p {
        color: rgba(255, 255, 255, 0.7);
        margin: 0;
        font-size: 1rem;
        font-weight: 400;
    }

    .register-link a {
        color: #667eea;
        text-decoration: none;
        font-weight: 700;
        transition: all 0.4s ease;
        position: relative;
        padding: 0.3rem 0.8rem;
        border-radius: 8px;
    }

    .register-link a::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        width: 0;
        height: 2px;
        background: linear-gradient(135deg, #667eea, #764ba2);
        transition: all 0.4s ease;
        transform: translateX(-50%);
    }

    .register-link a:hover {
        color: #ffffff;
        background: rgba(102, 126, 234, 0.15);
        transform: translateY(-2px);
    }

    .register-link a:hover::after {
        width: 80%;
    }

    /* Loading state */
    .btn-premium-login.loading {
        pointer-events: none;
        position: relative;
    }

    .btn-premium-login.loading::after {
        content: '';
        position: absolute;
        width: 20px;
        height: 20px;
        top: 50%;
        left: 50%;
        margin-left: -10px;
        margin-top: -10px;
        border: 2px solid transparent;
        border-top: 2px solid #ffffff;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    /* Floating decorative elements */
    .login-floating-element {
        position: absolute;
        pointer-events: none;
        opacity: 0.15;
        animation: loginFloat 10s ease-in-out infinite;
    }

    .login-floating-element:nth-child(1) {
        top: 15%;
        left: 10%;
        animation-delay: 0s;
    }

    .login-floating-element:nth-child(2) {
        top: 30%;
        right: 15%;
        animation-delay: 3s;
    }

    .login-floating-element:nth-child(3) {
        bottom: 20%;
        left: 15%;
        animation-delay: 6s;
    }

    @keyframes loginFloat {
        0%, 100% { 
            transform: translateY(0px) rotate(0deg) scale(1); 
            opacity: 0.15; 
        }
        50% { 
            transform: translateY(-30px) rotate(180deg) scale(1.1); 
            opacity: 0.25; 
        }
    }

    /* Input validation states */
    .premium-login-input.invalid {
        border-color: #ff6b6b;
        box-shadow: 0 0 0 3px rgba(255, 107, 107, 0.2);
        animation: shake 0.5s ease-in-out;
    }

    @keyframes shake {
        0%, 100% { transform: translateX(0); }
        25% { transform: translateX(-5px); }
        75% { transform: translateX(5px); }
    }

    .premium-login-input.valid {
        border-color: #4caf50;
        box-shadow: 0 0 0 3px rgba(76, 175, 80, 0.2);
    }

    /* Welcome back animation */
    .welcome-back {
        position: absolute;
        top: -50px;
        left: 50%;
        transform: translateX(-50%);
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        padding: 0.8rem 1.5rem;
        border-radius: 25px;
        font-size: 0.9rem;
        font-weight: 600;
        opacity: 0;
        transition: all 0.5s ease;
        box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
    }

    .welcome-back.show {
        opacity: 1;
        top: -30px;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .premium-login-card {
            padding: 2.5rem 2rem;
            margin: 1rem;
        }
        
        .login-title {
            font-size: 2.2rem;
        }
        
        .login-container {
            min-height: auto;
            padding: 1.5rem 0;
        }

        .premium-login-input {
            padding: 1rem 1.2rem;
        }
    }

    @media (max-width: 480px) {
        .premium-login-card {
            padding: 2rem 1.5rem;
        }
        
        .login-title {
            font-size: 1.9rem;
        }
    }
</style>

<div class="login-container">
    <!-- Floating decorative elements -->
    <div class="login-floating-element">
        <i class="fas fa-shield-alt" style="font-size: 2.5rem; color: rgba(102, 126, 234, 0.4);"></i>
    </div>
    <div class="login-floating-element">
        <i class="fas fa-key" style="font-size: 2rem; color: rgba(118, 75, 162, 0.4);"></i>
    </div>
    <div class="login-floating-element">
        <i class="fas fa-lock" style="font-size: 1.8rem; color: rgba(79, 172, 254, 0.4);"></i>
    </div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="premium-login-card">
                    <div class="welcome-back" id="welcomeBack">Welcome back!</div>
                    
                    <h1 class="login-title">
                        <i class="fas fa-sign-in-alt me-3" style="color: rgba(102, 126, 234, 0.8);"></i>
                        Welcome Back
                    </h1>
                    <p class="login-subtitle">
                        Sign in to access your premium banking experience
                    </p>
                    
                    <form action="/user/login" method="POST" id="loginForm">
                        <div class="login-form-group">
                            <label for="email" class="premium-form-label">
                                <i class="fas fa-envelope"></i>Email Address
                            </label>
                            <input type="email" class="form-control premium-login-input" id="email" name="email" 
                                   placeholder="Enter your email address" required>
                        </div>
                        
                        <div class="login-form-group">
                            <label for="password" class="premium-form-label">
                                <i class="fas fa-lock"></i>Password
                            </label>
                            <div class="password-toggle-container">
                                <input type="password" class="form-control premium-login-input" id="password" name="password" 
                                       placeholder="Enter your password" required>
                                <i class="fas fa-eye password-toggle" id="passwordToggle"></i>
                            </div>
                        </div>
                        
                        <div class="login-form-group">
                            <button type="submit" class="btn-premium-login" id="loginBtn">
                                <i class="fas fa-rocket me-2"></i>
                                Sign In
                            </button>
                        </div>
                    </form>
                    
                    <div class="register-link">
                        <p>Don't have an account? <a href="/user/register">Create Account</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const loginForm = document.getElementById('loginForm');
    const loginBtn = document.getElementById('loginBtn');
    const passwordToggle = document.getElementById('passwordToggle');
    const passwordInput = document.getElementById('password');
    const emailInput = document.getElementById('email');
    const welcomeBack = document.getElementById('welcomeBack');

    // Password toggle functionality
    passwordToggle.addEventListener('click', function() {
        const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
        passwordInput.setAttribute('type', type);
        
        // Toggle icon with smooth transition
        this.classList.toggle('fa-eye');
        this.classList.toggle('fa-eye-slash');
        
        // Add visual feedback
        this.style.transform = 'translateY(-50%) scale(1.2)';
        setTimeout(() => {
            this.style.transform = 'translateY(-50%) scale(1)';
        }, 150);
    });

    // Enhanced form validation with visual feedback
    function validateInput(input) {
        const value = input.value.trim();
        let isValid = false;

        if (input.type === 'email') {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            isValid = emailRegex.test(value);
        } else if (input.type === 'password' || input.type === 'text') {
            isValid = value.length >= 6;
        }

        // Apply validation classes
        input.classList.remove('valid', 'invalid');
        if (value.length > 0) {
            input.classList.add(isValid ? 'valid' : 'invalid');
        }

        return isValid;
    }

    // Real-time validation
    [emailInput, passwordInput].forEach(input => {
        input.addEventListener('input', function() {
            validateInput(this);
            updateLoginButton();
        });

        input.addEventListener('blur', function() {
            validateInput(this);
        });

        // Remove validation classes on focus
        input.addEventListener('focus', function() {
            this.classList.remove('valid', 'invalid');
        });
    });

    // Update login button state
    function updateLoginButton() {
        const emailValid = validateInput(emailInput);
        const passwordValid = validateInput(passwordInput);
        const allValid = emailValid && passwordValid && emailInput.value.trim() && passwordInput.value.trim();

        if (allValid) {
            loginBtn.style.background = 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)';
            loginBtn.style.transform = 'translateY(-2px) scale(1.01)';
            loginBtn.style.boxShadow = '0 25px 50px rgba(102, 126, 234, 0.5)';
        } else {
            loginBtn.style.background = 'linear-gradient(135deg, rgba(102, 126, 234, 0.7) 0%, rgba(118, 75, 162, 0.7) 100%)';
            loginBtn.style.transform = 'translateY(0) scale(1)';
            loginBtn.style.boxShadow = '0 20px 40px rgba(102, 126, 234, 0.4)';
        }
    }

    // Enhanced form submission with loading state
    loginForm.addEventListener('submit', function(e) {
        // Add loading state
        loginBtn.classList.add('loading');
        loginBtn.innerHTML = '';
        loginBtn.disabled = true;
        
        // Validate all inputs
        let isFormValid = true;
        [emailInput, passwordInput].forEach(input => {
            if (!validateInput(input) || !input.value.trim()) {
                isFormValid = false;
                input.classList.add('invalid');
            }
        });

        if (!isFormValid) {
            e.preventDefault();
            
            // Remove loading state
            loginBtn.classList.remove('loading');
            loginBtn.innerHTML = '<i class="fas fa-rocket me-2"></i>Sign In';
            loginBtn.disabled = false;
            
            // Shake the card
            const card = document.querySelector('.premium-login-card');
            card.style.animation = 'shake 0.5s ease-in-out';
            setTimeout(() => {
                card.style.animation = '';
            }, 500);
        }
    });

    // Welcome back message
    function showWelcomeBack() {
        if (emailInput.value.trim()) {
            welcomeBack.classList.add('show');
            setTimeout(() => {
                welcomeBack.classList.remove('show');
            }, 3000);
        }
    }

    emailInput.addEventListener('blur', showWelcomeBack);

    // Enhanced keyboard navigation
    loginForm.addEventListener('keydown', function(e) {
        if (e.key === 'Enter' && !e.shiftKey) {
            const focusedElement = document.activeElement;
            if (focusedElement === emailInput) {
                e.preventDefault();
                passwordInput.focus();
            }
        }
    });

    // Add smooth focus transitions
    document.querySelectorAll('.premium-login-input').forEach(input => {
        input.addEventListener('focus', function() {
            this.parentElement.parentElement.querySelector('.premium-form-label').style.color = 'rgba(102, 126, 234, 0.9)';
        });
        
        input.addEventListener('blur', function() {
            this.parentElement.parentElement.querySelector('.premium-form-label').style.color = 'rgba(255, 255, 255, 0.9)';
        });
    });

    // Initialize button state
    updateLoginButton();

    // Add entrance animation completion detection
    window.addEventListener('load', function() {
        setTimeout(() => {
            const card = document.querySelector('.premium-login-card');
            card.style.transform = 'translateY(0) scale(1)';
        }, 1000);
    });
</script>

<%- include('partials/footer') %>