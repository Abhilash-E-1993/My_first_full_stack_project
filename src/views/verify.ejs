<%- include('partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h1 class="card-title text-center mb-3">Verify Your Email</h1>
                <p class="text-center text-muted mb-4">An OTP has been sent to <strong><%= email %></strong>. It is valid for 5 minutes.</p>
                <form action="/user/verify" method="POST">
                    <input type="hidden" name="email" value="<%= email %>">
                    <div class="mb-3">
                        <label for="otp" class="form-label">Verification Code</label>
                        <input type="text" class="form-control" id="otp" name="otp" placeholder="Enter 6-digit OTP" required>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Verify</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>