    <script>
        // QUANTUM PARTICLE SYSTEM
        function createQuantumParticles() {
            const quantumField = document.getElementById('quantumField');
            for (let i = 0; i < 50; i++) {
                const particle = document.createElement('div');
                particle.className = 'quantum-particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 8 + 's';
                particle.style.animationDuration = (Math.random() * 4 + 6) + 's';
                quantumField.appendChild(particle);
            }
        }

        // FUNCTION TO SHOW THE MAIN LANDING PAGE
        function showLandingPage() {
            const mainContent = document.getElementById('mainContent');
            mainContent.classList.add('visible');
            document.body.style.overflow = 'auto';
        }

        // NEXT-GEN VAULT OPENING SEQUENCE
        function initNextGenVaultSequence() {
            const vaultOverlay = document.getElementById('vaultOverlay');
            const vaultDoor = document.getElementById('vaultDoor');
            const vaultWheel = document.getElementById('vaultWheel');
            const displayScreen = document.getElementById('displayScreen');
            const scanLine = document.getElementById('scanLine');
            const progressFill = document.getElementById('progressFill');
            const progressText = document.getElementById('progressText');
            const lights = [
                document.getElementById('light1'), document.getElementById('light2'),
                document.getElementById('light3'), document.getElementById('light4'),
                document.getElementById('light5')
            ];

            const sequence = [
                { 
                    time: 600,  
                    action: () => { 
                        displayScreen.textContent = 'QUANTUM CALIBRATION...'; 
                        progressFill.style.width = '15%'; 
                    }
                },
                { 
                    time: 1400, 
                    action: () => { 
                        displayScreen.textContent = 'NEURAL SCAN ACTIVE'; 
                        scanLine.classList.add('active'); 
                        progressFill.style.width = '30%'; 
                        progressText.textContent = 'Neural Pattern Recognition...'; 
                    }
                },
                { 
                    time: 2200, 
                    action: () => { 
                        lights[0].classList.add('active'); 
                        progressFill.style.width = '40%'; 
                    }
                },
                { 
                    time: 2500, 
                    action: () => { 
                        lights[1].classList.add('active'); 
                        progressFill.style.width = '50%'; 
                    }
                },
                { 
                    time: 2800, 
                    action: () => { 
                        lights[2].classList.add('active'); 
                        progressFill.style.width = '60%'; 
                    }
                },
                { 
                    time: 3100, 
                    action: () => { 
                        lights[3].classList.add('active'); 
                        progressFill.style.width = '70%'; 
                    }
                },
                { 
                    time: 3400, 
                    action: () => { 
                        lights[4].classList.add('active'); 
                        progressFill.style.width = '75%'; 
                        displayScreen.textContent = 'QUANTUM ACCESS VERIFIED'; 
                        progressText.textContent = 'Quantum Authentication Complete...'; 
                    }
                },
                { 
                    time: 3900, 
                    action: () => { 
                        vaultWheel.classList.add('spinning'); 
                        displayScreen.textContent = 'DIMENSIONAL UNLOCK...'; 
                        progressFill.style.width = '85%'; 
                        progressText.textContent = 'Activating Dimensional Locks...'; 
                    }
                },
                { 
                    time: 5500, 
                    action: () => { 
                        displayScreen.textContent = 'PORTAL OPENING'; 
                        progressFill.style.width = '95%'; 
                        progressText.textContent = 'Opening Quantum Portal...'; 
                    }
                },
                { 
                    time: 6200, 
                    action: () => { 
                        vaultDoor.classList.add('opening'); 
                        progressFill.style.width = '100%'; 
                        progressText.textContent = 'Welcome to the Future of Banking'; 
                        displayScreen.textContent = 'QUANTUM PORTAL OPEN'; 
                    }
                },
                { 
                    time: 8500, 
                    action: () => {
                        vaultOverlay.classList.add('hidden');
                        showLandingPage();
                    }
                }
            ];

            sequence.forEach(phase => {
                setTimeout(phase.action, phase.time);
            });
        }

        // ENHANCED SECURITY ICON ANIMATION
        function enhanceSecurityIcon() {
            const securityIcon = document.querySelector('.security-icon');
            const icons = ['🔒', '🛡️', '🔐', '⚡', '🌟'];
            let currentIcon = 0;
            
            setInterval(() => {
                currentIcon = (currentIcon + 1) % icons.length;
                securityIcon.textContent = icons[currentIcon];
            }, 2000);
        }

        // LANDING PAGE SCRIPTS & INITIALIZATION
        document.addEventListener('DOMContentLoaded', function() {
            // Create quantum particle effects
            createQuantumParticles();
            
            // Enhance security icon
            enhanceSecurityIcon();
            
            // Auto-start the next-gen vault sequence
            initNextGenVaultSequence();

            // Intersection Observer for animating stats cards on scroll
            const observerOptions = { threshold: 0.1, rootMargin: '0px 0px -50px 0px' };
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.animationPlayState = 'running';
                    }
                });
            }, observerOptions);

            // Observe stat cards after the main animation is complete
            setTimeout(() => {
                document.querySelectorAll('.stat-card').forEach(card => observer.observe(card));
            }, 9000);

            // Enhanced button interactions, activate after main animation
            setTimeout(() => {
                document.querySelectorAll('.btn-premium').forEach(btn => {
                    btn.addEventListener('mouseenter', function() { 
                        this.style.transform = 'translateY(-3px) scale(1.02)'; 
                    });
                    btn.addEventListener('mouseleave', function() { 
                        this.style.transform = 'translateY(0) scale(1)'; 
                    });
                    btn.addEventListener('mousedown', function() { 
                        this.style.transform = 'translateY(-1px) scale(0.98)'; 
                    });
                    btn.addEventListener('mouseup', function() { 
                        this.style.transform = 'translateY(-3px) scale(1.02)'; 
                    });
                });
            }, 9000);
        });

        // Enhanced mouse parallax effect for floating elements
        document.addEventListener('mousemove', (e) => {
            const mouseX = e.clientX / window.innerWidth;
            const mouseY = e.clientY / window.innerHeight;
            
            document.querySelectorAll('.floating-3d').forEach((element, index) => {
                const speed = (index + 1) * 0.7;
                const x = (mouseX * speed * 30) - (speed * 15);
                const y = (mouseY * speed * 30) - (speed * 15);
                element.style.transform += ` translate(${x}px, ${y}px)`;
            });

            // Add parallax to quantum particles
            document.querySelectorAll('.quantum-particle').forEach((particle, index) => {
                if (index % 5 === 0) { // Only affect every 5th particle for performance
                    const speed = 0.3;
                    const x = (mouseX * speed * 10) - (speed * 5);
                    const y = (mouseY * speed * 10) - (speed * 5);
                    particle.style.transform += ` translate(${x}px, ${y}px)`;
                }
            });
        });

        // Dynamic holographic grid pulse based on mouse position
        document.addEventListener('mousemove', (e) => {
            const holoGrid = document.querySelector('.holo-grid');
            const mouseX = e.clientX / window.innerWidth;
            const mouseY = e.clientY / window.innerHeight;
            
            const intensity = Math.sqrt(mouseX * mouseX + mouseY * mouseY);
            holoGrid.style.opacity = 0.2 + (intensity * 0.3);
        });

        // Add quantum glitch effect to display screen
        function addQuantumGlitch() {
            const displayScreen = document.getElementById('displayScreen');
            let glitchActive = false;
            
            setInterval(() => {
                if (!glitchActive && Math.random() < 0.1) {
                    glitchActive = true;
                    displayScreen.style.textShadow = '2px 0 #ff00ff, -2px 0 #00ffff';
                    displayScreen.style.transform = 'skew(2deg)';
                    
                    setTimeout(() => {
                        displayScreen.style.textShadow = '0 0 20px rgba(0, 255, 255, 0.8)';
                        displayScreen.style.transform = 'skew(0deg)';
                        glitchActive = false;
                    }, 150);
                }
            }, 500);
        }

        // Initialize quantum glitch effect after a delay
        setTimeout(addQuantumGlitch, 2000);
    </script>
