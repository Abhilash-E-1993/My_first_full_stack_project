        /* --- VAULT SCENE STYLES (UNCHANGED) --- */
        .vault-scene {
            position: fixed; top: 0; left: 0; width: 100%; height: 100vh;
            background: #000; display: flex; align-items: center; justify-content: center;
            perspective: 3000px; transform-style: preserve-3d; z-index: 99999;
        }
        .deep-space {
            position: absolute; width: 100%; height: 100%;
            background: radial-gradient(circle at center, #0b0b15 0%, #000 80%);
            animation: spaceRotate 60s linear infinite;
        }
        @keyframes spaceRotate { 0% { transform: scale(1.1) rotate(0deg); } 100% { transform: scale(1.1) rotate(360deg); } }

        .nebula-layer {
            position: absolute; width: 150%; height: 150%; top: -25%; left: -25%; opacity: 0.3;
            mix-blend-mode: screen; filter: blur(50px);
            background: radial-gradient(circle at 50% 50%, rgba(138, 43, 226, 0.3), transparent 60%);
            animation: nebulaDrift 30s ease-in-out infinite alternate;
        }
        @keyframes nebulaDrift { 0% { transform: translate(0, 0) rotate(0deg); } 100% { transform: translate(-5%, 5%) rotate(5deg); } }

        .stellar-grid {
            position: absolute; width: 100%; height: 100%;
            background-image: linear-gradient(rgba(0, 255, 255, 0.05) 1px, transparent 1px), linear-gradient(90deg, rgba(0, 255, 255, 0.05) 1px, transparent 1px);
            background-size: 100px 100px; transform: rotateX(60deg) translateZ(-100px);
            animation: gridPerspective 20s ease-in-out infinite;
            mask-image: linear-gradient(to bottom, transparent, black 40%, black 80%, transparent); -webkit-mask-image: linear-gradient(to bottom, transparent, black 40%, black 80%, transparent);
        }
        @keyframes gridPerspective { 0%, 100% { transform: rotateX(60deg) translateZ(-100px) scale(1); } 50% { transform: rotateX(60deg) translateZ(-50px) scale(1.1); } }

        .quantum-field { position: absolute; width: 100%; height: 100%; transform-style: preserve-3d; }
        .quantum-particle {
            position: absolute; width: 3px; height: 3px; background: #fff; border-radius: 50%;
            box-shadow: 0 0 15px currentColor; animation: quantumOrbit 20s linear infinite;
        }
        @keyframes quantumOrbit { 0% { transform: rotateY(0deg) rotateX(0deg) translateZ(300px); } 100% { transform: rotateY(360deg) rotateX(360deg) translateZ(300px); } }

        .energy-ring {
            position: absolute; border: 1px solid rgba(0, 243, 255, 0.15); border-radius: 50%;
            animation: ringPulse 4s ease-in-out infinite; box-shadow: 0 0 30px rgba(0, 243, 255, 0.05);
        }
        .energy-ring:nth-of-type(1) { width: 700px; height: 700px; animation-delay: 0s; }
        .energy-ring:nth-of-type(2) { width: 550px; height: 550px; animation-delay: 0.5s; border-color: rgba(188, 19, 254, 0.15); }
        .energy-ring:nth-of-type(3) { width: 400px; height: 400px; animation-delay: 1s; }
        @keyframes ringPulse { 0%, 100% { transform: scale(1) rotateZ(0deg); opacity: 0.3; } 50% { transform: scale(1.1) rotateZ(180deg); opacity: 0.8; } }

        .vault-chamber {
            position: relative; width: 500px; height: 500px; transform-style: preserve-3d;
            animation: vaultMaterialize 2.5s cubic-bezier(0.23, 1, 0.32, 1);
        }
        @keyframes vaultMaterialize { 0% { transform: translateZ(-3000px) scale(0.1); opacity: 0; filter: blur(20px); } 70% { transform: translateZ(50px) scale(1.05); opacity: 1; filter: blur(2px); } 100% { transform: translateZ(0) scale(1); opacity: 1; filter: blur(0); } }

        .vault-frame {
            position: absolute; width: 100%; height: 100%; border: 2px solid rgba(0, 243, 255, 0.3);
            border-radius: 30px; background: rgba(5, 5, 10, 0.8); backdrop-filter: blur(10px);
            box-shadow: 0 0 100px rgba(0, 243, 255, 0.1); animation: framePulse 3s ease-in-out infinite;
        }

        .vault-door {
            position: absolute; width: 100%; height: 100%; border-radius: 25px;
            background: radial-gradient(circle at 50% 50%, #1a1a2e 0%, #0a0a0a 100%);
            transform-origin: left center; transition: transform 3s cubic-bezier(0.645, 0.045, 0.355, 1);
            overflow: hidden; border: 1px solid rgba(255, 255, 255, 0.05);
        }
        .vault-door.opening { transform: perspective(1000px) rotateY(-120deg); }

        .door-tech-overlay {
            position: absolute; width: 100%; height: 100%; opacity: 0.2;
            background-image: linear-gradient(0deg, transparent 24%, rgba(0, 255, 255, .3) 25%, rgba(0, 255, 255, .3) 26%, transparent 27%, transparent 74%, rgba(0, 255, 255, .3) 75%, rgba(0, 255, 255, .3) 76%, transparent 77%, transparent), linear-gradient(90deg, transparent 24%, rgba(0, 255, 255, .3) 25%, rgba(0, 255, 255, .3) 26%, transparent 27%, transparent 74%, rgba(0, 255, 255, .3) 75%, rgba(0, 255, 255, .3) 76%, transparent 77%, transparent);
            background-size: 50px 50px; animation: techScan 10s linear infinite;
        }
        @keyframes techScan { 0% { transform: scale(1); } 50% { transform: scale(1.1); } 100% { transform: scale(1); } }

        .lock-mechanism { position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 300px; height: 300px; }
        .lock-ring {
            position: absolute; width: 100%; height: 100%; border: 2px solid transparent;
            border-radius: 50%; border-top-color: var(--neon-cyan); border-right-color: var(--neon-purple);
            animation: lockRotate 3s linear infinite; filter: drop-shadow(0 0 5px var(--neon-cyan));
        }
        .lock-ring:nth-child(2) { width: 70%; height: 70%; top: 15%; left: 15%; animation-direction: reverse; border-top-color: #fff; }
        .lock-ring:nth-child(3) { width: 40%; height: 40%; top: 30%; left: 30%; border-top-color: gold; }
        .lock-ring.unlocking { animation: unlockSpin 2s cubic-bezier(0.68, -0.55, 0.265, 1.55) forwards; }
        @keyframes lockRotate { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }
        @keyframes unlockSpin { 0% { transform: rotate(0deg) scale(1); } 50% { transform: rotate(720deg) scale(1.2); } 100% { transform: rotate(1440deg) scale(0); opacity: 0; } }

        .energy-core {
            position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);
            width: 60px; height: 60px; border-radius: 50%; background: #fff; box-shadow: 0 0 40px var(--neon-cyan);
            animation: corePulse 2s ease-in-out infinite;
        }
        .energy-core.charged { animation: coreCharge 2s ease-out forwards; }
        @keyframes corePulse { 0%, 100% { transform: translate(-50%, -50%) scale(1); opacity: 0.8; } 50% { transform: translate(-50%, -50%) scale(1.2); opacity: 1; box-shadow: 0 0 60px var(--neon-cyan); } }
        @keyframes coreCharge { 0% { transform: translate(-50%, -50%) scale(1); } 50% { transform: translate(-50%, -50%) scale(3); background: #fff; box-shadow: 0 0 100px #fff; } 100% { transform: translate(-50%, -50%) scale(0); opacity: 0; } }

        .scanner-beam {
            position: absolute; width: 100%; height: 2px; background: var(--neon-cyan); top: -10px; opacity: 0; box-shadow: 0 0 15px var(--neon-cyan);
        }
        .scanner-beam.scanning { animation: scanSequence 3s ease-in-out; }
        @keyframes scanSequence { 0% { top: -10px; opacity: 0; } 10% { opacity: 1; } 50% { top: 100%; } 90% { opacity: 1; } 100% { top: 110%; opacity: 0; } }

        .status-display {
            position: absolute; top: 15%; left: 50%; transform: translateX(-50%); text-align: center; color: var(--neon-cyan);
            font-family: 'Space Grotesk', sans-serif; font-size: 1.5rem; font-weight: 500; letter-spacing: 6px; text-transform: uppercase;
            text-shadow: 0 0 15px var(--neon-cyan); opacity: 0; animation: statusFadeIn 1s ease-out forwards; animation-delay: 0.5s;
        }
        @keyframes statusFadeIn { to { opacity: 1; } }

        .auth-nodes { position: absolute; bottom: 15%; left: 50%; transform: translateX(-50%); display: flex; gap: 20px; }
        .auth-node { width: 15px; height: 15px; border: 1px solid rgba(255,255,255,0.2); background: transparent; transform: rotate(45deg); transition: all 0.3s ease; }
        .auth-node.authenticated { background: var(--neon-cyan); border-color: var(--neon-cyan); box-shadow: 0 0 15px var(--neon-cyan); animation: nodeSuccess 0.4s ease; }
        @keyframes nodeSuccess { 0% { transform: rotate(45deg) scale(1); } 50% { transform: rotate(45deg) scale(1.5); } 100% { transform: rotate(45deg) scale(1); } }

        .progress-bar-container { position: absolute; bottom: 10%; left: 50%; transform: translateX(-50%); width: 300px; height: 4px; background: rgba(255,255,255,0.1); border-radius: 2px; }
        .progress-track { width: 100%; height: 100%; overflow: hidden; border-radius: 2px; }
        .progress-fill-vault { height: 100%; width: 0%; background: linear-gradient(90deg, var(--neon-cyan), var(--neon-purple)); box-shadow: 0 0 20px var(--neon-cyan); transition: width 0.5s ease; }

        .completion-flash { position: absolute; width: 100%; height: 100%; background: #fff; opacity: 0; pointer-events: none; z-index: 100000; }
        .completion-flash.active { animation: flashBurst 1s ease-out; }
        @keyframes flashBurst { 0% { opacity: 0; } 50% { opacity: 1; } 100% { opacity: 0; } }

        .plasma-field { display: none; }

        /* --- ULTRA PREMIUM MAIN LANDING PAGE --- */
        
        .main-content {
            opacity: 0; transform: scale(0.95); position: relative; z-index: 10;
            transition: all 1.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        }
        .main-content.visible { opacity: 1; transform: scale(1); }

        .hero-section {
            min-height: 100vh; display: flex; flex-direction: column;
            align-items: center; justify-content: center;
            position: relative; padding: 6rem 0;
            background: radial-gradient(circle at 50% 0%, #121225 0%, #000000 100%);
        }

        .hero-content { position: relative; z-index: 10; animation: fadeInUp 1s ease-out; }
        @keyframes fadeInUp { from { opacity: 0; transform: translateY(50px); } to { opacity: 1; transform: translateY(0); } }

        .hero-title {
            font-family: 'Space Grotesk', sans-serif; font-size: clamp(3.5rem, 6vw, 7rem); font-weight: 700; letter-spacing: -2px;
            background: linear-gradient(180deg, #fff 0%, rgba(255,255,255,0.7) 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;
            margin-bottom: 1.5rem; text-shadow: 0 10px 30px rgba(0,0,0,0.5);
            display: flex; flex-direction: column; align-items: center; justify-content: center;
        }
        .hero-title i { font-size: 3rem; margin-bottom: 1rem; color: var(--neon-cyan); text-shadow: 0 0 30px var(--neon-cyan); }

        .hero-subtitle {
            font-size: 1.25rem; color: rgba(255, 255, 255, 0.6); font-weight: 300; line-height: 1.8; margin-bottom: 4rem;
            max-width: 700px; margin-left: auto; margin-right: auto;
        }

        /* --- FIXED BUTTON STYLES --- */
        .hero-buttons { display: flex; gap: 2rem; justify-content: center; flex-wrap: wrap; }

        .btn-premium {
            position: relative; padding: 18px 40px; font-size: 1rem; font-weight: 600; border-radius: 100px; text-decoration: none;
            text-transform: uppercase; letter-spacing: 2px; font-family: 'Space Grotesk', sans-serif;
            transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1); display: inline-flex; align-items: center; cursor: pointer;
        }

        /* Primary Button */
        .btn-primary-premium {
            background: rgba(255, 255, 255, 0.05); border: 1px solid rgba(255, 255, 255, 0.2); color: #fff;
            backdrop-filter: blur(10px); box-shadow: 0 0 30px rgba(0, 0, 0, 0.5); overflow: hidden;
        }
        .btn-primary-premium:hover {
            border-color: var(--neon-cyan); box-shadow: 0 0 40px rgba(0, 243, 255, 0.3); transform: translateY(-3px); color: #fff;
        }
        .btn-primary-premium::before {
            content: ''; position: absolute; top: 0; left: 0; width: 100%; height: 100%;
            background: linear-gradient(90deg, transparent, rgba(0, 243, 255, 0.2), transparent);
            transform: skewX(-20deg) translateX(-150%); transition: 0.5s;
        }
        .btn-primary-premium:hover::before { transform: skewX(-20deg) translateX(150%); }

        /* Secondary Button - FIXED (Now has a visible box) */
        .btn-secondary-premium {
            background: rgba(255, 255, 255, 0.02); /* Added slight background */
            color: #fff; /* Force White Text */
            border: 1px solid rgba(255, 255, 255, 0.15); /* Added Visible Border */
            backdrop-filter: blur(5px);
        }
        .btn-secondary-premium:hover {
            background: rgba(255, 255, 255, 0.08);
            border-color: #fff;
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            color: #fff;
        }

        /* FLOATING ELEMENTS - REPOSITIONED TO AVOID OVERLAP */
        .floating-3d { position: absolute; pointer-events: none; z-index: 1; }
        
        .floating-card {
            width: 140px; height: 90px; background: linear-gradient(135deg, rgba(255,255,255,0.1), rgba(255,255,255,0.05));
            border: 1px solid rgba(255,255,255,0.2); border-radius: 12px; backdrop-filter: blur(10px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.3); animation: float3D 8s ease-in-out infinite;
        }
        .floating-coin {
            width: 60px; height: 60px; border-radius: 50%;
            background: radial-gradient(circle at 30% 30%, #ffd700, #b8860b);
            box-shadow: 0 0 20px rgba(255, 215, 0, 0.4); animation: float3D 6s ease-in-out infinite reverse;
        }
        @keyframes float3D { 0%, 100% { transform: translateY(0) rotateX(0) rotateY(0); } 50% { transform: translateY(-20px) rotateX(5deg) rotateY(5deg); } }
        
        /* Moved these far to the corners */
        .floating-card:nth-child(1) { top: 10%; left: 5%; } 
        .floating-card:nth-child(2) { bottom: 10%; right: 5%; animation-delay: 2s; }
        .floating-coin:nth-child(3) { top: 70%; left: 5%; animation-delay: 1s; }
        .floating-coin:nth-child(4) { top: 10%; right: 5%; animation-delay: 3s; } /* Moved from 20%/15% to 10%/5% */

        /* STATS CARDS */
        .stats-section { margin-top: 6rem; position: relative; z-index: 10; }
        .stat-card {
            background: rgba(20, 20, 30, 0.6); backdrop-filter: blur(20px); -webkit-backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.08); border-radius: 24px; padding: 3rem 2rem; text-align: center;
            transition: all 0.4s ease; box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            opacity: 0; animation: statCardAppear 1s ease-out forwards; animation-delay: 1.5s;
        }
        @keyframes statCardAppear { from { opacity: 0; transform: translateY(30px); } to { opacity: 1; transform: translateY(0); } }

        .stat-card:hover { transform: translateY(-10px); border-color: var(--neon-cyan); box-shadow: 0 20px 50px rgba(0, 243, 255, 0.15); background: rgba(255, 255, 255, 0.03); }
        .stat-number {
            font-family: 'Space Grotesk', sans-serif; font-size: 3.5rem; font-weight: 700;
            background: linear-gradient(135deg, #fff 0%, #aaa 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;
            margin-bottom: 0.5rem; display: block;
        }
        .stat-label { color: rgba(255, 255, 255, 0.5); font-size: 0.9rem; font-weight: 600; letter-spacing: 1px; text-transform: uppercase; }

        .particles { pointer-events: none; opacity: 0.4; }
        .particle { background: var(--neon-cyan); box-shadow: 0 0 5px var(--neon-cyan); }
        
        @media (max-width: 768px) {
            .hero-title { font-size: 3rem; }
            .hero-buttons { flex-direction: column; width: 100%; padding: 0 20px; }
            .btn-premium { width: 100%; justify-content: center; }
        }
    </style>
</head>
