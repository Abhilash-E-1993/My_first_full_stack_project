<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome - Gemini Bank</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        /* GLOBAL & LANDING PAGE STYLES */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            overflow: hidden;
        }

        /* NEXT-GEN VAULT EFFECT - ULTRA ADVANCED */
        .vault-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            z-index: 99999;
            background: 
                radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.3), transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(255, 119, 198, 0.3), transparent 50%),
                radial-gradient(circle at 40% 40%, rgba(120, 199, 255, 0.2), transparent 50%),
                linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 50%, #16213e 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            transition: opacity 2s ease-out;
            perspective: 2000px;
            overflow: hidden;
        }

        .vault-overlay.hidden {
            opacity: 0;
            pointer-events: none;
        }

        /* HOLOGRAPHIC GRID BACKGROUND */
        .holo-grid {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0.3;
            background-image: 
                linear-gradient(rgba(0,255,255,0.1) 1px, transparent 1px),
                linear-gradient(90deg, rgba(0,255,255,0.1) 1px, transparent 1px);
            background-size: 50px 50px;
            animation: gridPulse 4s ease-in-out infinite;
        }

        @keyframes gridPulse {
            0%, 100% { opacity: 0.2; }
            50% { opacity: 0.4; }
        }

        /* QUANTUM PARTICLES */
        .quantum-field {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        .quantum-particle {
            position: absolute;
            width: 2px;
            height: 2px;
            background: #00ffff;
            border-radius: 50%;
            animation: quantumFloat 8s linear infinite;
            box-shadow: 0 0 10px #00ffff;
        }

        @keyframes quantumFloat {
            0% {
                transform: translate(0, 100vh) scale(0);
                opacity: 0;
            }
            10% {
                opacity: 1;
                transform: scale(1);
            }
            90% {
                opacity: 1;
            }
            100% {
                transform: translate(0, -100vh) scale(0);
                opacity: 0;
            }
        }

        /* ULTRA-ADVANCED VAULT CONTAINER */
        .vault-container {
            position: relative;
            width: 90vw;
            height: 90vh;
            max-width: 1200px;
            max-height: 800px;
            transform-style: preserve-3d;
            animation: vaultMaterialize 3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

        @keyframes vaultMaterialize {
            0% {
                transform: scale(0.1) rotateY(-180deg) rotateX(45deg);
                opacity: 0;
                filter: blur(20px);
            }
            50% {
                transform: scale(0.8) rotateY(-45deg) rotateX(15deg);
                opacity: 0.8;
                filter: blur(5px);
            }
            100% {
                transform: scale(1) rotateY(0deg) rotateX(0deg);
                opacity: 1;
                filter: blur(0px);
            }
        }

        /* HOLOGRAPHIC VAULT WALLS */
        .vault-wall {
            position: absolute;
            background: 
                linear-gradient(135deg, 
                    rgba(0, 255, 255, 0.1) 0%,
                    rgba(128, 0, 255, 0.05) 25%,
                    rgba(255, 0, 128, 0.05) 50%,
                    rgba(0, 255, 255, 0.1) 75%,
                    rgba(128, 0, 255, 0.05) 100%
                );
            border: 2px solid rgba(0, 255, 255, 0.3);
            backdrop-filter: blur(20px);
            box-shadow: 
                inset 0 0 50px rgba(0, 255, 255, 0.1),
                0 0 100px rgba(0, 255, 255, 0.2);
        }

        .vault-wall::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                repeating-linear-gradient(
                    45deg,
                    transparent,
                    transparent 10px,
                    rgba(0, 255, 255, 0.05) 11px,
                    rgba(0, 255, 255, 0.05) 12px
                );
            animation: holoScan 3s linear infinite;
        }

        @keyframes holoScan {
            0% { transform: translateX(-100%); }
            100% { transform: translateX(100%); }
        }

        .vault-back {
            width: 100%;
            height: 100%;
            transform: translateZ(-300px);
        }

        .vault-left {
            width: 300px;
            height: 100%;
            left: 0;
            transform: rotateY(90deg) translateZ(-150px);
        }

        .vault-right {
            width: 300px;
            height: 100%;
            right: 0;
            transform: rotateY(-90deg) translateZ(-150px);
        }

        .vault-top {
            width: 100%;
            height: 300px;
            top: 0;
            transform: rotateX(90deg) translateZ(-150px);
        }

        .vault-bottom {
            width: 100%;
            height: 300px;
            bottom: 0;
            transform: rotateX(-90deg) translateZ(-150px);
        }

        /* NEXT-GEN VAULT DOOR */
        .vault-door {
            position: absolute;
            width: 100%;
            height: 100%;
            background: 
                radial-gradient(circle at 30% 30%, rgba(0, 255, 255, 0.1) 0%, transparent 70%),
                linear-gradient(135deg, 
                    rgba(20, 20, 40, 0.9) 0%,
                    rgba(40, 20, 60, 0.8) 25%,
                    rgba(60, 20, 40, 0.8) 50%,
                    rgba(20, 40, 60, 0.9) 100%
                );
            transform-origin: left center;
            transition: transform 4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            box-shadow: 
                inset 0 0 200px rgba(0, 0, 0, 0.8),
                inset 20px 0 100px rgba(0, 255, 255, 0.1),
                0 0 300px rgba(0, 255, 255, 0.3);
            border-right: 6px solid rgba(0, 255, 255, 0.5);
            z-index: 1000;
            backdrop-filter: blur(10px);
        }

        .vault-door.opening {
            transform: rotateY(-140deg);
        }

        .vault-door::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                repeating-linear-gradient(
                    0deg,
                    transparent 0px,
                    rgba(0, 255, 255, 0.05) 1px,
                    transparent 2px,
                    transparent 30px
                ),
                repeating-linear-gradient(
                    90deg,
                    transparent 0px,
                    rgba(0, 255, 255, 0.05) 1px,
                    transparent 2px,
                    transparent 30px
                );
            animation: doorScanlines 2s linear infinite;
        }

        @keyframes doorScanlines {
            0% { opacity: 0.5; }
            50% { opacity: 0.8; }
            100% { opacity: 0.5; }
        }

        /* HOLOGRAPHIC LOCK SYSTEM */
        .vault-lock-system {
            position: absolute;
            right: 10%;
            top: 50%;
            transform: translateY(-50%);
            z-index: 1001;
        }

        /* QUANTUM WHEEL */
        .vault-wheel {
            width: 350px;
            height: 350px;
            border-radius: 50%;
            background: 
                radial-gradient(circle at 30% 30%, rgba(0, 255, 255, 0.3) 0%, transparent 70%),
                conic-gradient(from 0deg, 
                    rgba(0, 255, 255, 0.8),
                    rgba(128, 0, 255, 0.8),
                    rgba(255, 0, 128, 0.8),
                    rgba(0, 255, 255, 0.8)
                );
            position: relative;
            margin: 0 auto 40px auto;
            box-shadow: 
                0 0 100px rgba(0, 255, 255, 0.6),
                inset 0 0 50px rgba(0, 255, 255, 0.2),
                inset 0 0 100px rgba(0, 0, 0, 0.5);
            transition: transform 3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
            border: 3px solid rgba(0, 255, 255, 0.4);
            backdrop-filter: blur(5px);
        }

        .vault-wheel.spinning {
            transform: rotate(1440deg);
            box-shadow: 
                0 0 200px rgba(0, 255, 255, 1),
                inset 0 0 100px rgba(255, 255, 255, 0.3);
        }

        .vault-wheel::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 80%;
            height: 80%;
            transform: translate(-50%, -50%);
            background: 
                linear-gradient(0deg, transparent 48%, rgba(0, 255, 255, 0.6) 49%, rgba(0, 255, 255, 0.6) 51%, transparent 52%),
                linear-gradient(45deg, transparent 48%, rgba(255, 0, 128, 0.6) 49%, rgba(255, 0, 128, 0.6) 51%, transparent 52%),
                linear-gradient(90deg, transparent 48%, rgba(128, 0, 255, 0.6) 49%, rgba(128, 0, 255, 0.6) 51%, transparent 52%),
                linear-gradient(135deg, transparent 48%, rgba(0, 255, 255, 0.6) 49%, rgba(0, 255, 255, 0.6) 51%, transparent 52%);
            border-radius: 50%;
            animation: wheelGlow 2s ease-in-out infinite alternate;
        }

        @keyframes wheelGlow {
            0% { opacity: 0.6; }
            100% { opacity: 1; }
        }

        .vault-wheel::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 120px;
            height: 120px;
            transform: translate(-50%, -50%);
            background: 
                radial-gradient(circle, rgba(0, 255, 255, 0.8) 0%, rgba(0, 100, 100, 0.6) 70%, transparent 100%);
            border-radius: 50%;
            box-shadow: 
                0 0 40px rgba(0, 255, 255, 0.8),
                inset 0 0 20px rgba(255, 255, 255, 0.3);
            animation: centerPulse 1.5s ease-in-out infinite;
        }

        @keyframes centerPulse {
            0%, 100% { transform: translate(-50%, -50%) scale(1); }
            50% { transform: translate(-50%, -50%) scale(1.1); }
        }

        /* HOLOGRAPHIC DISPLAY */
        .vault-display {
            background: 
                linear-gradient(135deg, rgba(0, 30, 60, 0.8), rgba(0, 60, 30, 0.8)),
                linear-gradient(45deg, rgba(0, 0, 0, 0.6), rgba(20, 20, 40, 0.6));
            padding: 40px;
            border-radius: 20px;
            border: 2px solid rgba(0, 255, 255, 0.4);
            box-shadow: 
                0 0 60px rgba(0, 255, 255, 0.4),
                inset 0 0 30px rgba(0, 255, 255, 0.1);
            margin-bottom: 50px;
            backdrop-filter: blur(20px);
        }

        .display-screen {
            background: 
                radial-gradient(circle at center, rgba(0, 20, 20, 0.9) 0%, rgba(0, 40, 40, 0.9) 100%);
            color: #00ffff;
            font-family: 'Courier New', monospace;
            font-size: 28px;
            font-weight: bold;
            text-align: center;
            padding: 30px;
            border-radius: 15px;
            border: 2px solid rgba(0, 255, 255, 0.5);
            box-shadow: 
                inset 0 0 40px rgba(0, 255, 255, 0.2),
                0 0 60px rgba(0, 255, 255, 0.3);
            position: relative;
            overflow: hidden;
            text-shadow: 0 0 20px rgba(0, 255, 255, 0.8);
        }

        .display-screen::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(0, 255, 255, 0.3), transparent);
            animation: hologramScan 3s linear infinite;
        }

        @keyframes hologramScan {
            0% { left: -100%; }
            100% { left: 100%; }
        }

        /* QUANTUM AUTH LIGHTS */
        .auth-lights {
            display: flex;
            justify-content: center;
            gap: 25px;
            margin-top: 30px;
        }

        .auth-light {
            width: 25px;
            height: 25px;
            border-radius: 50%;
            background: rgba(50, 50, 50, 0.8);
            border: 2px solid rgba(100, 100, 100, 0.6);
            transition: all 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            position: relative;
        }

        .auth-light.active {
            background: 
                radial-gradient(circle at 30% 30%, #00ffff 0%, #0080ff 70%, #0040ff 100%);
            border-color: #00ffff;
            box-shadow: 
                0 0 30px rgba(0, 255, 255, 1),
                inset 0 0 15px rgba(255, 255, 255, 0.6);
            animation: quantumPulse 1.2s ease-in-out infinite;
        }

        @keyframes quantumPulse {
            0%, 100% {
                transform: scale(1);
                box-shadow: 
                    0 0 30px rgba(0, 255, 255, 1),
                    0 0 60px rgba(0, 255, 255, 0.6),
                    0 0 90px rgba(0, 255, 255, 0.3);
            }
            50% {
                transform: scale(1.3);
                box-shadow: 
                    0 0 40px rgba(0, 255, 255, 1),
                    0 0 80px rgba(0, 255, 255, 0.8),
                    0 0 120px rgba(0, 255, 255, 0.5);
            }
        }

        /* ADVANCED BIOMETRIC SCANNER */
        .biometric-scanner {
            width: 140px;
            height: 140px;
            border: 3px solid rgba(0, 255, 255, 0.4);
            border-radius: 20px;
            background: 
                radial-gradient(circle at center, rgba(0, 255, 255, 0.15) 0%, transparent 70%),
                linear-gradient(45deg, rgba(0, 50, 50, 0.3) 25%, transparent 25%),
                linear-gradient(-45deg, rgba(0, 50, 50, 0.3) 25%, transparent 25%);
            background-size: 100% 100%, 12px 12px, 12px 12px;
            margin: 30px auto;
            position: relative;
            overflow: hidden;
            box-shadow: 
                0 0 40px rgba(0, 255, 255, 0.4),
                inset 0 0 20px rgba(0, 255, 255, 0.1);
        }

        .scan-line {
            position: absolute;
            top: -3px;
            left: 0;
            width: 100%;
            height: 6px;
            background: 
                linear-gradient(90deg, 
                    transparent,
                    rgba(0, 255, 255, 0.5),
                    rgba(255, 255, 255, 0.8),
                    rgba(0, 255, 255, 0.5),
                    transparent
                );
            animation: advancedBioScan 4s ease-in-out infinite;
            opacity: 0;
            box-shadow: 0 0 20px rgba(0, 255, 255, 0.8);
        }

        .scan-line.active {
            opacity: 1;
        }

        @keyframes advancedBioScan {
            0%, 100% {
                transform: translateY(0);
                opacity: 0;
            }
            10%, 90% {
                opacity: 1;
            }
            50% {
                transform: translateY(136px);
                box-shadow: 0 0 40px rgba(0, 255, 255, 1);
            }
        }

        /* HOLOGRAPHIC PROGRESS SYSTEM */
        .vault-progress {
            position: absolute;
            bottom: 8%;
            left: 50%;
            transform: translateX(-50%);
            text-align: center;
            color: rgba(0, 255, 255, 0.9);
        }

        .progress-text {
            font-size: 22px;
            font-weight: 400;
            margin-bottom: 30px;
            animation: textHologram 3s ease-in-out infinite alternate;
            text-shadow: 0 0 20px rgba(0, 255, 255, 0.6);
        }

        @keyframes textHologram {
            0% {
                text-shadow: 0 0 20px rgba(0, 255, 255, 0.6);
                opacity: 0.8;
            }
            100% {
                text-shadow: 0 0 40px rgba(0, 255, 255, 1);
                opacity: 1;
            }
        }

        .progress-bar {
            width: 500px;
            height: 8px;
            background: rgba(0, 255, 255, 0.1);
            border-radius: 4px;
            overflow: hidden;
            position: relative;
            border: 1px solid rgba(0, 255, 255, 0.3);
            box-shadow: 
                0 0 20px rgba(0, 255, 255, 0.2),
                inset 0 0 10px rgba(0, 255, 255, 0.1);
        }

        .progress-fill {
            height: 100%;
            background: 
                linear-gradient(90deg, 
                    rgba(0, 255, 255, 0.8) 0%,
                    rgba(128, 0, 255, 0.8) 50%,
                    rgba(255, 0, 128, 0.8) 100%
                );
            border-radius: 4px;
            width: 0%;
            transition: width 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            position: relative;
            box-shadow: 0 0 20px rgba(0, 255, 255, 0.6);
        }

        .progress-fill::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                linear-gradient(90deg, 
                    transparent, 
                    rgba(255, 255, 255, 0.6), 
                    transparent
                );
            animation: quantumProgressShine 2.5s linear infinite;
        }

        @keyframes quantumProgressShine {
            0% { transform: translateX(-100%); }
            100% { transform: translateX(100%); }
        }

        /* SECURITY STATUS */
        .security-status {
            position: absolute;
            top: 8%;
            left: 50%;
            transform: translateX(-50%);
            text-align: center;
            color: rgba(0, 255, 255, 0.9);
        }

        .security-icon {
            font-size: 60px;
            margin-bottom: 25px;
            color: #00ffff;
            animation: securityIconFloat 3s ease-in-out infinite;
            text-shadow: 0 0 30px rgba(0, 255, 255, 0.8);
        }

        @keyframes securityIconFloat {
            0%, 100% {
                transform: scale(1) rotate(0deg);
                text-shadow: 0 0 30px rgba(0, 255, 255, 0.8);
            }
            50% {
                transform: scale(1.1) rotate(5deg);
                text-shadow: 0 0 50px rgba(0, 255, 255, 1);
            }
        }

        .security-text {
            font-size: 28px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 3px;
            text-shadow: 0 0 30px rgba(0, 255, 255, 0.6);
            animation: securityTextGlow 2s ease-in-out infinite alternate;
        }

        @keyframes securityTextGlow {
            0% {
                text-shadow: 0 0 30px rgba(0, 255, 255, 0.6);
            }
            100% {
                text-shadow: 0 0 60px rgba(0, 255, 255, 1);
            }
        }

        /* RESPONSIVE FOR VAULT */
        @media (max-width: 768px) {
            .vault-container {
                width: 95vw;
                height: 95vh;
            }
            .vault-wheel {
                width: 250px;
                height: 250px;
            }
            .vault-display {
                padding: 25px;
            }
            .display-screen {
                font-size: 20px;
                padding: 20px;
            }
            .progress-bar {
                width: 350px;
            }
            .security-icon {
                font-size: 40px;
            }
            .security-text {
                font-size: 20px;
            }
        }

        /* MAIN LANDING PAGE STYLES (PRESERVED AS REQUESTED) */
        .main-content {
            opacity: 0;
            transform: scale(0.95);
            transition: all 1.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        }

        .main-content.visible {
            opacity: 1;
            transform: scale(1);
        }

        .hero-section {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
            padding: 6rem 0;
        }

        .hero-content {
            position: relative;
            z-index: 10;
            animation: fadeInUp 1s ease-out;
        }

        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(50px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .hero-title {
            font-size: clamp(3rem, 8vw, 6rem);
            font-weight: 900;
            background: linear-gradient(135deg, #ffffff 0%, #667eea 50%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 2rem;
            line-height: 1.1;
            text-shadow: 0 0 40px rgba(102, 126, 234, 0.3);
            animation: titleGlow 3s ease-in-out infinite alternate;
        }

        @keyframes titleGlow {
            0% { filter: drop-shadow(0 0 20px rgba(102, 126, 234, 0.3)); }
            100% { filter: drop-shadow(0 0 40px rgba(102, 126, 234, 0.6)); }
        }

        .hero-subtitle {
            font-size: 1.4rem; color: rgba(255, 255, 255, 0.85);
            font-weight: 300; line-height: 1.6; margin-bottom: 3rem;
            max-width: 600px; margin-left: auto; margin-right: auto;
        }

        .hero-buttons { display: flex; gap: 1.5rem; justify-content: center; flex-wrap: wrap; margin-top: 3rem; }

        .btn-premium {
            position: relative; padding: 1rem 2.5rem; font-size: 1.1rem;
            font-weight: 600; border-radius: 50px; border: none;
            text-decoration: none; transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            overflow: hidden; text-transform: uppercase; letter-spacing: 1px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        }
        .btn-premium::before {
            content: ''; position: absolute; top: 0; left: -100%;
            width: 100%; height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s;
        }
        .btn-premium:hover::before { left: 100%; }
        .btn-primary-premium {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;
            box-shadow: 0 15px 35px rgba(102, 126, 234, 0.4);
        }
        .btn-primary-premium:hover { transform: translateY(-3px); box-shadow: 0 25px 50px rgba(102, 126, 234, 0.6); color: white; }
        .btn-secondary-premium {
            background: rgba(255, 255, 255, 0.1); color: white;
            border: 2px solid rgba(255, 255, 255, 0.3); backdrop-filter: blur(10px);
        }
        .btn-secondary-premium:hover {
            background: rgba(255, 255, 255, 0.2); border-color: rgba(255, 255, 255, 0.5);
            transform: translateY(-3px); color: white; box-shadow: 0 25px 50px rgba(255, 255, 255, 0.1);
        }

        /* FLOATING 3D ELEMENTS */
        .floating-3d { position: absolute; pointer-events: none; opacity: 0.6; }
        .floating-card {
            width: 80px; height: 50px;
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.8), rgba(118, 75, 162, 0.8));
            border-radius: 8px; backdrop-filter: blur(10px);
            animation: float3D 8s ease-in-out infinite;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        }
        .floating-coin {
            width: 40px; height: 40px;
            background: linear-gradient(135deg, #ffd700, #ffed4a);
            border-radius: 50%; animation: float3D 6s ease-in-out infinite reverse;
            box-shadow: 0 10px 30px rgba(255, 215, 0, 0.3);
        }
        @keyframes float3D {
            0%, 100% { transform: translateY(0px) rotateY(0deg) rotateX(0deg); }
            33% { transform: translateY(-30px) rotateY(120deg) rotateX(10deg); }
            66% { transform: translateY(-15px) rotateY(240deg) rotateX(-10deg); }
        }
        .floating-card:nth-child(1) { top: 20%; left: 10%; animation-delay: 0s; }
        .floating-card:nth-child(2) { top: 30%; right: 15%; animation-delay: 2s; }
        .floating-coin:nth-child(3) { bottom: 40%; left: 20%; animation-delay: 1s; }
        .floating-coin:nth-child(4) { top: 60%; right: 10%; animation-delay: 3s; }

        /* PARTICLE SYSTEM */
        .particles { position: absolute; top: 0; left: 0; width: 100%; height: 100%; overflow: hidden; z-index: 1; }
        .particle {
            position: absolute; width: 2px; height: 2px;
            background: rgba(102, 126, 234, 0.6); border-radius: 50%;
            animation: particleFloat 15s linear infinite;
        }
        @keyframes particleFloat {
            0% { opacity: 0; transform: translateY(100vh) translateX(0); }
            10% { opacity: 1; }
            90% { opacity: 1; }
            100% { opacity: 0; transform: translateY(-10vh) translateX(100px); }
        }

        /* STATS CARDS */
        .stats-section { margin-top: 4rem; position: relative; z-index: 10; }
        .stat-card {
            background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(10px);
