    <script>
        function showLandingPage() {
            const mainContent = document.getElementById('mainContent');
            mainContent.classList.add('visible');
            document.body.style.overflow = 'auto';
        }
        
        function initQuantumField() {
            const field = document.getElementById('quantumField');
            const colors = ['#00ffff', '#ff00ff', '#ffff00', '#00ff00', '#ff0080'];
            for (let i = 0; i < 30; i++) {
                const particle = document.createElement('div');
                particle.className = 'quantum-particle';
                particle.style.color = colors[i % colors.length];
                particle.style.left = Math.random() * 100 + '%';
                particle.style.top = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 20 + 's';
                particle.style.animationDuration = (15 + Math.random() * 10) + 's';
                field.appendChild(particle);
            }
        }

        async function initVaultSequence() {
            const vaultScene = document.getElementById('vaultScene');
            const statusDisplay = document.getElementById('statusDisplay');
            const scannerBeam = document.getElementById('scannerBeam');
            const nodes = Array.from({ length: 5 }, (_, i) => document.getElementById(`node${i + 1}`));
            const progressFill = document.getElementById('progressFill');
            const rings = Array.from({ length: 3 }, (_, i) => document.getElementById(`ring${i + 1}`));
            const energyCore = document.getElementById('energyCore');
            const vaultDoor = document.getElementById('vaultDoor');
            const completionFlash = document.getElementById('completionFlash');

            const wait = ms => new Promise(resolve => setTimeout(resolve, ms));

            const sequence = [
                { delay: 2500, action: () => { statusDisplay.textContent = 'SCANNING BIOMETRICS'; scannerBeam.classList.add('scanning'); progressFill.style.width = '15%'; }},
                { delay: 1500, action: () => { nodes[0].classList.add('authenticated'); progressFill.style.width = '25%'; }},
                { delay: 500, action: () => { nodes[1].classList.add('authenticated'); progressFill.style.width = '40%'; }},
                { delay: 500, action: () => { statusDisplay.textContent = 'QUANTUM AUTHENTICATION'; nodes[2].classList.add('authenticated'); progressFill.style.width = '55%'; }},
                { delay: 500, action: () => { nodes[3].classList.add('authenticated'); progressFill.style.width = '70%'; }},
                { delay: 500, action: () => { nodes[4].classList.add('authenticated'); progressFill.style.width = '85%'; statusDisplay.textContent = 'DECRYPTING LOCK MATRIX'; }},
                { delay: 1000, action: () => { rings.forEach(ring => ring.classList.add('unlocking')); energyCore.classList.add('charged'); progressFill.style.width = '95%'; }},
                { delay: 1500, action: () => { statusDisplay.textContent = 'ACCESS GRANTED'; progressFill.style.width = '100%'; completionFlash.classList.add('active'); }},
                { delay: 500, action: () => { vaultDoor.classList.add('opening'); }},
                { 
                    delay: 2000, 
                    action: () => {
                        vaultScene.style.transition = 'opacity 1.5s ease-out';
                        vaultScene.style.opacity = '0';
                        showLandingPage();
                        
                        setTimeout(() => {
                            vaultScene.remove();
                        }, 1500);
                    }
                }
            ];

            for (const step of sequence) {
                await wait(step.delay);
                step.action();
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            initQuantumField();
            initVaultSequence();

            setTimeout(() => {
                const observerOptions = { threshold: 0.1, rootMargin: '0px 0px -50px 0px' };
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            entry.target.style.animationPlayState = 'running';
                        }
                    });
                }, observerOptions);
                document.querySelectorAll('.stat-card').forEach(card => observer.observe(card));

                document.querySelectorAll('.btn-premium').forEach(btn => {
                    btn.addEventListener('mouseenter', function() { this.style.transform = 'translateY(-3px) scale(1.02)'; });
                    btn.addEventListener('mouseleave', function() { this.style.transform = 'translateY(0) scale(1)'; });
                    btn.addEventListener('mousedown', function() { this.style.transform = 'translateY(-1px) scale(0.98)'; });
                    btn.addEventListener('mouseup', function() { this.style.transform = 'translateY(-3px) scale(1.02)'; });
                });
            }, 11000);

            document.addEventListener('mousemove', (e) => {
                if(document.body.style.overflow === 'auto') {
                    const mouseX = e.clientX / window.innerWidth;
                    const mouseY = e.clientY / window.innerHeight;
                    document.querySelectorAll('.floating-3d').forEach((element, index) => {
                        const speed = (index + 1) * 0.7;
                        const x = (mouseX * speed * 30) - (speed * 15);
                        const y = (mouseY * speed * 30) - (speed * 15);
                        element.style.setProperty('--parallax-x', `${x}px`);
                        element.style.setProperty('--parallax-y', `${y}px`);
                        element.style.transform = `translate(var(--parallax-x, 0), var(--parallax-y, 0))`;
                    });
                }
            });
        });
    </script>
