<%- include('partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2">Joint Account Dashboard</h1>
    <div>
        <a href="/account/dashboard" class="btn btn-outline-secondary">Primary Dashboard</a>
        <a href="/user/logout" class="btn btn-secondary">Logout</a>
    </div>
</div>

<div class="row">
    <div class="col-lg-4 mb-4">
        <div class="card shadow-sm mb-4">
            <div class="card-header">
                Joint Account Details
            </div>
            <div class="card-body">
                <p class="card-text"><strong>Account Number:</strong> <%= account.account_number %></p>
                <h4 class="card-title">Balance: $<%= parseFloat(account.balance).toFixed(2) %></h4>
            </div>
        </div>
        
        <div class="card shadow-sm mb-4">
            <div class="card-header">
                Members
            </div>
            <ul class="list-group list-group-flush">
                <% members.forEach(member => { %>
                    <li class="list-group-item"><%= member.first_name %> <%= member.last_name %></li>
                <% }); %>
            </ul>
        </div>
        
        <div class="card shadow-sm">
             <div class="card-header">
                Perform Transactions
            </div>
            <div class="accordion accordion-flush" id="transactionAccordion">
                <div class="accordion-item">
                    <h2 class="accordion-header"><button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseDeposit">Deposit</button></h2>
                    <div id="collapseDeposit" class="accordion-collapse collapse" data-bs-parent="#transactionAccordion">
                        <div class="accordion-body">
                            <form action="/account/joint/deposit" method="POST">
                                <input type="hidden" name="accountId" value="<%= account.account_id %>">
                                <div class="mb-3"><label class="form-label">Amount</label><input type="number" class="form-control" name="amount" placeholder="0.00" step="0.01" required></div>
                                <button type="submit" class="btn btn-primary w-100">Deposit</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header"><button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseWithdraw">Withdraw</button></h2>
                    <div id="collapseWithdraw" class="accordion-collapse collapse" data-bs-parent="#transactionAccordion">
                        <div class="accordion-body">
                           <form action="/account/joint/withdraw" method="POST">
                                <input type="hidden" name="accountId" value="<%= account.account_id %>">
                                <div class="mb-3"><label class="form-label">Amount</label><input type="number" class="form-control" name="amount" placeholder="0.00" step="0.01" required></div>
                                <button type="submit" class="btn btn-warning w-100">Withdraw</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header"><button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTransfer">Transfer</button></h2>
                    <div id="collapseTransfer" class="accordion-collapse collapse" data-bs-parent="#transactionAccordion">
                        <div class="accordion-body">
                             <form action="/account/joint/transfer" method="POST">
                                <input type="hidden" name="fromAccountId" value="<%= account.account_id %>">
                                <div class="mb-3"><label class="form-label">Recipient Account Number</label><input type="text" class="form-control" name="toAccountNumber" required></div>
                                <div class="mb-3"><label class="form-label">Amount</label><input type="number" class="form-control" name="amount" placeholder="0.00" step="0.01" required></div>
                                <button type="submit" class="btn btn-info w-100">Transfer</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-8">
        <div class="card shadow-sm mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                Loan Application
                <a href="/account/joint/loans/apply" class="btn btn-sm btn-outline-primary">Apply for Business Loan</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                         <thead>
                            <tr><th>Date</th><th>Type</th><th>Amount</th><th>Status</th></tr>
                        </thead>
                        <tbody>
                            <% if (loans.length === 0) { %>
                                <tr><td colspan="4" class="text-center text-muted">No loan applications found.</td></tr>
                            <% } else { loans.forEach(loan => { %>
                                <tr>
                                    <td><%= new Date(loan.request_date).toLocaleDateString() %></td>
                                    <td><%= loan.loan_type %></td>
                                    <td>$<%= parseFloat(loan.amount).toFixed(2) %></td>
                                    <td><span class="badge bg-<%= loan.status === 'APPROVED' ? 'success' : (loan.status === 'REJECTED' ? 'danger' : 'warning') %>"><%= loan.status %></span></td>
                                </tr>
                            <% }); } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header">Recent Transactions</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr><th>Date</th><th>Type</th><th>Amount</th></tr>
                        </thead>
                        <tbody>
                            <% if (transactions.length === 0) { %>
                                <tr><td colspan="3" class="text-center text-muted">No transactions yet.</td></tr>
                            <% } else { transactions.forEach(tx => { %>
                                <tr>
                                    <td><%= new Date(tx.timestamp).toLocaleString() %></td>
                                    <td><%= tx.transaction_type %></td>
                                    <td class="text-<%= tx.from_account_id === account.account_id ? 'danger' : 'success' %>">
                                        <%= tx.from_account_id === account.account_id ? '-' : '+' %> $<%= parseFloat(tx.amount).toFixed(2) %>
                                    </td>
                                </tr>
                            <% }); } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>