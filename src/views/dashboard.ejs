<%- include('partials/header') %>

<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    :root {
        --bg-deep: #030014;
        --glass-bg: rgba(255, 255, 255, 0.05);
        --glass-border: rgba(255, 255, 255, 0.1);
        --glass-highlight: rgba(255, 255, 255, 0.2);
        --primary-glow: #6366f1;
        --success-glow: #10b981;
        --warning-glow: #f59e0b;
        --danger-glow: #ef4444;
        --text-main: #ffffff;
        --text-secondary: #cbd5e1; /* Bright Blue-Grey for readability */
    }

    body {
        background-color: var(--bg-deep);
        background-image: 
            radial-gradient(circle at 10% 20%, rgba(99, 102, 241, 0.15) 0%, transparent 25%),
            radial-gradient(circle at 90% 80%, rgba(16, 185, 129, 0.1) 0%, transparent 25%);
        color: var(--text-main);
        font-family: 'Plus Jakarta Sans', sans-serif;
        min-height: 100vh;
        overflow-x: hidden;
    }

    /* --- Typography --- */
    h1, h2, h3, h4, h5 { font-weight: 700; color: #fff; }
    
    .text-gradient {
        background: linear-gradient(135deg, #fff 0%, #cbd5e1 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .text-muted { color: var(--text-secondary) !important; opacity: 0.9; }

    /* --- Glass Components --- */
    .ultra-card {
        background: var(--glass-bg);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid var(--glass-border);
        border-radius: 24px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.3);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        overflow: hidden;
        position: relative;
    }

    .ultra-card:hover {
        border-color: var(--glass-highlight);
        transform: translateY(-5px);
        box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.5);
    }

    .card-header {
        background: rgba(255, 255, 255, 0.03);
        border-bottom: 1px solid var(--glass-border);
        padding: 1.25rem 1.5rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-size: 0.85rem;
        color: var(--text-secondary);
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    /* --- Balance Section --- */
    .balance-amount {
        font-size: 3.5rem;
        font-weight: 800;
        background: linear-gradient(135deg, #fff 0%, #e0e7ff 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin: 0.5rem 0;
        letter-spacing: -1px;
    }

    .account-pill {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid var(--glass-border);
        padding: 0.4rem 1rem;
        border-radius: 50px;
        font-family: 'Courier New', monospace;
        font-size: 0.9rem;
        color: var(--text-secondary);
        cursor: pointer;
        transition: 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .account-pill:hover {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        border-color: var(--primary-glow);
    }

    /* --- Tabs & Forms --- */
    .nav-tabs { border-bottom: 1px solid var(--glass-border); margin-bottom: 1.5rem; }
    .nav-link {
        color: var(--text-secondary);
        border: none;
        font-weight: 600;
        padding: 1rem;
        background: transparent !important;
        position: relative;
    }
    .nav-link.active { color: #fff; }
    .nav-link.active::after {
        content: ''; position: absolute; bottom: 0; left: 0; width: 100%; height: 2px;
        background: var(--primary-glow); box-shadow: 0 -2px 10px var(--primary-glow);
    }

    .form-control, .input-group-text {
        background: rgba(0, 0, 0, 0.4);
        border: 1px solid var(--glass-border);
        color: white;
        border-radius: 12px;
        padding: 0.75rem 1rem;
    }
    .input-group-text { border-right: none; color: var(--text-secondary); }
    .form-control:focus {
        background: rgba(0, 0, 0, 0.6);
        border-color: var(--primary-glow);
        box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
        color: white;
    }
    .form-control::placeholder { color: rgba(255, 255, 255, 0.5); }

    /* --- Buttons --- */
    .btn-glass {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid var(--glass-border);
        color: #fff;
        padding: 0.6rem 1.2rem;
        border-radius: 12px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    .btn-glass:hover {
        background: rgba(255, 255, 255, 0.2);
        border-color: var(--primary-glow);
        color: white;
        transform: translateY(-2px);
    }

    .btn-action { width: 100%; padding: 0.8rem; border-radius: 12px; font-weight: 600; border: none; transition: 0.3s; color: white; }
    .btn-deposit { background: linear-gradient(135deg, #4f46e5 0%, #6366f1 100%); box-shadow: 0 4px 15px rgba(99, 102, 241, 0.4); }
    .btn-withdraw { background: linear-gradient(135deg, #f59e0b 0%, #fbbf24 100%); box-shadow: 0 4px 15px rgba(245, 158, 11, 0.4); }
    .btn-transfer { background: linear-gradient(135deg, #0ea5e9 0%, #38bdf8 100%); box-shadow: 0 4px 15px rgba(14, 165, 233, 0.4); }
    .btn-action:hover { transform: translateY(-2px); filter: brightness(1.1); }

    /* --- Tables --- */
    .custom-table { width: 100%; border-collapse: separate; border-spacing: 0 0.5rem; }
    .custom-table thead th {
        color: var(--text-secondary); font-weight: 600; font-size: 0.75rem;
        text-transform: uppercase; letter-spacing: 0.08em;
        padding: 0 1.5rem 0.5rem; border: none;
    }
    .custom-table tbody tr { background: rgba(255, 255, 255, 0.03); transition: all 0.2s; }
    .custom-table tbody tr td { padding: 1rem 1.5rem; vertical-align: middle; border: none; color: #fff; }
    .custom-table tbody tr td:first-child { border-radius: 16px 0 0 16px; }
    .custom-table tbody tr td:last-child { border-radius: 0 16px 16px 0; }
    .custom-table tbody tr:hover { background: rgba(255, 255, 255, 0.08); transform: scale(1.005); }

    .tx-icon {
        width: 32px; height: 32px; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 1rem;
    }
    .tx-in { background: rgba(16, 185, 129, 0.2); color: #34d399; }
    .tx-out { background: rgba(239, 68, 68, 0.2); color: #f87171; }

    .status-badge { padding: 0.35em 0.8em; border-radius: 20px; font-size: 0.75rem; font-weight: 700; text-transform: uppercase; letter-spacing: 0.05em; }
    .status-approved { background: rgba(16, 185, 129, 0.15); color: #34d399; border: 1px solid rgba(16, 185, 129, 0.3); }
    .status-pending { background: rgba(245, 158, 11, 0.15); color: #fbbf24; border: 1px solid rgba(245, 158, 11, 0.3); }
    .status-rejected { background: rgba(239, 68, 68, 0.15); color: #f87171; border: 1px solid rgba(239, 68, 68, 0.3); }

    /* Animation */
    @keyframes fadeInUp { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
    .animate-in { animation: fadeInUp 0.6s ease-out forwards; opacity: 0; }
</style>

<div class="container-fluid py-5 px-lg-5">
    
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-5 animate-in" style="animation-delay: 0.1s;">
        <div class="welcome-message mb-3 mb-md-0">
            <h1 class="text-gradient mb-1">Welcome, <%= user.first_name %>!</h1>
            <p class="text-muted mb-0"><i class="far fa-calendar-alt me-2"></i><%= new Date().toLocaleDateString('en-US', { weekday: 'long', month: 'long', day: 'numeric' }) %></p>
        </div>
        <div class="d-flex gap-2">
            <% if (user && user.is_admin) { %>
                <a href="/admin/dashboard" class="btn btn-glass"><i class="fas fa-user-shield me-2"></i>Admin</a>
            <% } %>
            <a href="/account/joint/create" class="btn btn-glass"><i class="fas fa-user-plus me-2"></i>New Joint</a>
            <a href="/user/joint/login" class="btn btn-glass"><i class="fas fa-users me-2"></i>Joint Login</a>
            <a href="/user/logout" class="btn btn-glass" style="border-color: rgba(239,68,68,0.3); color: #fca5a5;"><i class="fas fa-sign-out-alt me-2"></i>Logout</a>
        </div>
    </div>

    <div class="row g-4">
        
        <div class="col-lg-4">
            
            <div class="ultra-card mb-4 text-center p-4 animate-in" style="animation-delay: 0.2s;">
                <p class="text-muted text-uppercase fw-bold mb-0" style="letter-spacing: 1px; font-size: 0.8rem;">Total Balance</p>
                <h2 class="balance-amount" id="balanceAmount">$0.00</h2>
                
                <div class="account-pill mb-4" id="accountNumber" data-account="<%= account.account_number %>" title="Click to copy">
                    <i class="fas fa-wallet"></i>
                    <span><%= account.account_number %></span>
                    <i class="fas fa-copy ms-1" style="font-size: 0.8em;"></i>
                </div>

                <div style="height: 60px; opacity: 0.8;">
                    <canvas id="balanceChart"></canvas>
                </div>
            </div>

            <div class="ultra-card animate-in" style="animation-delay: 0.3s;">
                <div class="card-header"><i class="fas fa-bolt text-warning"></i> Quick Actions</div>
                <div class="p-3">
                    <ul class="nav nav-tabs nav-fill" id="myTab" role="tablist">
                        <li class="nav-item"><button class="nav-link active" data-bs-toggle="tab" data-bs-target="#deposit-tab"><i class="fas fa-arrow-down me-2"></i>Deposit</button></li>
                        <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#withdraw-tab"><i class="fas fa-arrow-up me-2"></i>Withdraw</button></li>
                        <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#transfer-tab"><i class="fas fa-paper-plane me-2"></i>Transfer</button></li>
                    </ul>
                    
                    <div class="tab-content pt-2">
                        <div class="tab-pane fade show active" id="deposit-tab">
                            <form action="/account/deposit" method="POST">
                                <input type="hidden" name="accountId" value="<%= account.account_id %>">
                                <label class="text-muted small mb-2">Amount to Deposit</label>
                                <div class="input-group mb-3">
                                    <span class="input-group-text">$</span>
                                    <input type="number" class="form-control" name="amount" placeholder="0.00" step="0.01" required min="0.01">
                                </div>
                                <button type="submit" class="btn btn-action btn-deposit">Confirm Deposit</button>
                            </form>
                        </div>
                        <div class="tab-pane fade" id="withdraw-tab">
                            <form action="/account/withdraw" method="POST">
                                <input type="hidden" name="accountId" value="<%= account.account_id %>">
                                <label class="text-muted small mb-2">Amount to Withdraw</label>
                                <div class="input-group mb-3">
                                    <span class="input-group-text">$</span>
                                    <input type="number" class="form-control" name="amount" placeholder="0.00" step="0.01" required min="0.01">
                                </div>
                                <button type="submit" class="btn btn-action btn-withdraw">Confirm Withdrawal</button>
                            </form>
                        </div>
                        <div class="tab-pane fade" id="transfer-tab">
                             <form action="/account/transfer" method="POST">
                                <input type="hidden" name="fromAccountId" value="<%= account.account_id %>">
                                <div class="mb-3">
                                    <label class="text-muted small mb-2">Recipient Account</label>
                                    <input type="text" class="form-control" name="toAccountNumber" placeholder="XXXX-XXXX-XXXX" required>
                                </div>
                                <div class="mb-3">
                                    <label class="text-muted small mb-2">Amount</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input type="number" class="form-control" name="amount" placeholder="0.00" step="0.01" required min="0.01">
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-action btn-transfer">Send Transfer</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            
            <div class="ultra-card mb-4 animate-in" style="animation-delay: 0.4s;">
                <div class="card-header d-flex justify-content-between">
                    <span><i class="fas fa-history text-info"></i> Recent Transactions</span>
                </div>
                <div class="p-3">
                    <div class="table-responsive">
                        <table class="custom-table">
                            <thead><tr><th>Details</th><th>Type</th><th>Date</th><th>Amount</th></tr></thead>
                            <tbody>
                                <% if (transactions.length === 0) { %>
                                    <tr><td colspan="4" class="text-center text-muted py-5">No recent activity.</td></tr>
                                <% } else { transactions.slice(0, 5).forEach(tx => { %>
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="tx-icon <%= tx.from_account_id === account.account_id ? 'tx-out' : 'tx-in' %>">
                                                    <i class="fas <%= tx.from_account_id === account.account_id ? 'fa-arrow-up' : 'fa-arrow-down' %>"></i>
                                                </div>
                                                <div>
                                                    <div class="fw-bold text-white"><%= tx.from_account_id === account.account_id ? 'Sent' : 'Received' %></div>
                                                    <div class="text-muted small" style="font-size: 0.75rem;">
                                                        <%= tx.transaction_type === 'TRANSFER' ? (tx.from_account_id === account.account_id ? 'To: ' + tx.to_account_number : 'From: ' + tx.from_account_number) : 'Self' %>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-muted small text-uppercase"><%= tx.transaction_type %></td>
                                        <td class="text-muted small"><%= new Date(tx.timestamp).toLocaleDateString() %></td>
                                        <td class="fw-bold <%= tx.from_account_id === account.account_id ? 'text-danger' : 'text-success' %>">
                                            <%= tx.from_account_id === account.account_id ? '-' : '+' %> $<%= parseFloat(tx.amount).toFixed(2) %>
                                        </td>
                                    </tr>
                                <% }); } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="ultra-card animate-in" style="animation-delay: 0.5s;">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span><i class="fas fa-file-invoice-dollar text-success"></i> Loan Applications</span>
                    <a href="/account/loans/apply" class="btn btn-sm btn-glass py-1" style="font-size: 0.8rem;">New Application</a>
                </div>
                <div class="p-3">
                    <div class="table-responsive">
                        <table class="custom-table">
                            <thead><tr><th>Type</th><th>Amount</th><th>Date</th><th>Status</th></tr></thead>
                            <tbody>
                                <% if (loans.length === 0) { %>
                                    <tr><td colspan="4" class="text-center text-muted py-5">No loan history.</td></tr>
                                <% } else { loans.slice(0, 3).forEach(loan => { %>
                                    <tr>
                                        <td class="fw-bold text-white"><%= loan.loan_type %></td>
                                        <td class="text-white">$<%= parseFloat(loan.amount).toFixed(2) %></td>
                                        <td class="text-muted small"><%= new Date(loan.request_date).toLocaleDateString() %></td>
                                        <td><span class="status-badge status-<%= loan.status.toLowerCase() %>"><%= loan.status %></span></td>
                                    </tr>
                                <% }); } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
document.addEventListener('DOMContentLoaded', () => {
    // --- Balance Count-Up Animation ---
    const balanceEl = document.getElementById('balanceAmount');
    const finalBalance = parseFloat('<%= account.balance %>');
    const duration = 1500; 
    let startTime = null;

    function animateBalance(timestamp) {
        if (!startTime) startTime = timestamp;
        const progress = timestamp - startTime;
        const currentAmount = Math.min((progress / duration) * finalBalance, finalBalance);
        
        // Format with commas and decimals
        balanceEl.textContent = `$${currentAmount.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 })}`;
        
        if (progress < duration) {
            requestAnimationFrame(animateBalance);
        }
    }
    requestAnimationFrame(animateBalance);

    // --- Copy Account Number ---
    const accountEl = document.getElementById('accountNumber');
    accountEl.addEventListener('click', () => {
        navigator.clipboard.writeText(accountEl.dataset.account);
        const originalIcon = accountEl.querySelector('.fa-copy');
        const originalText = accountEl.querySelector('span');
        
        // Visual feedback
        accountEl.style.borderColor = '#10b981';
        accountEl.style.color = '#fff';
        originalIcon.className = 'fas fa-check ms-1 text-success';
        
        setTimeout(() => {
            accountEl.style.borderColor = '';
            accountEl.style.color = '';
            originalIcon.className = 'fas fa-copy ms-1';
        }, 2000);
    });

    // --- Balance Sparkline Chart ---
    const ctx = document.getElementById('balanceChart').getContext('2d');
    const gradient = ctx.createLinearGradient(0, 0, 0, 60);
    gradient.addColorStop(0, 'rgba(99, 102, 241, 0.4)'); // Purple/Indigo glow
    gradient.addColorStop(1, 'rgba(99, 102, 241, 0)');

    new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['Day 1', 'Day 2', 'Day 3', 'Day 4', 'Day 5', 'Day 6', 'Today'],
            datasets: [{
                data: [
                    finalBalance * 0.92, 
                    finalBalance * 0.95, 
                    finalBalance * 0.94, 
                    finalBalance * 0.98, 
                    finalBalance * 0.96, 
                    finalBalance * 0.99, 
                    finalBalance
                ],
                backgroundColor: gradient,
                borderColor: '#6366f1',
                borderWidth: 2,
                pointRadius: 0,
                tension: 0.4,
                fill: true,
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: { legend: { display: false }, tooltip: { enabled: false } },
            scales: { x: { display: false }, y: { display: false } },
            layout: { padding: 0 }
        }
    });
});
</script>

<%- include('partials/footer') %>