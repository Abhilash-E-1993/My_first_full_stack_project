<%- include('partials/header') %>

<style>
    /* --- State-of-the-Art Dashboard UI --- */
    :root {
        --dark-bg: #10101a;
        --glass-bg: rgba(26, 26, 46, 0.7);
        --glass-border: rgba(255, 255, 255, 0.1);
        --text-light: #f0f0f0;
        --text-muted: #a0a0b0;
        --primary-accent: #667eea;
        --primary-glow: rgba(102, 126, 234, 0.3);
        --success-color: #43e97b;
        --success-glow: rgba(67, 233, 123, 0.2);
        --danger-color: #ff6b6b;
        --danger-glow: rgba(255, 107, 107, 0.2);
        --warning-color: #ffa726;
        --warning-glow: rgba(255, 167, 38, 0.2);
    }

    body {
        background-color: var(--dark-bg);
        color: var(--text-light);
        font-family: 'Inter', sans-serif;
    }

    /* --- Page Header --- */
    .dashboard-header {
        border-bottom: 1px solid var(--glass-border);
        padding-bottom: 1.5rem;
        animation: fadeInDown 0.8s ease-out;
    }

    .welcome-message h1 {
        font-weight: 700;
        font-size: 2rem;
    }

    .welcome-message p {
        color: var(--text-muted);
        font-size: 1rem;
    }

    .header-actions .btn {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid var(--glass-border);
        color: var(--text-light);
        transition: all 0.3s ease;
    }
    .header-actions .btn:hover {
        background: var(--glass-bg);
        border-color: var(--primary-accent);
        transform: translateY(-2px);
    }

    /* --- Glass Card Style --- */
    .glass-card {
        background: var(--glass-bg);
        backdrop-filter: blur(20px);
        border: 1px solid var(--glass-border);
        border-radius: 1rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
        transition: all 0.4s ease;
        overflow: hidden;
        animation: fadeInUp 0.8s ease-out forwards;
        opacity: 0;
    }

    .glass-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 16px 40px rgba(0, 0, 0, 0.3);
        border-color: rgba(102, 126, 234, 0.5);
    }
    
    .card-header {
        background: transparent;
        border-bottom: 1px solid var(--glass-border);
        font-weight: 600;
        font-size: 1.1rem;
        padding: 1rem 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    /* Balance Card */
    .balance-card .balance-label {
        color: var(--text-muted);
    }
    .balance-card .balance-amount {
        font-size: 3rem;
        font-weight: 800;
        margin: 0.5rem 0;
        color: var(--text-light);
    }
    .balance-card .account-number {
        font-family: 'SF Mono', monospace;
        background: rgba(0, 0, 0, 0.2);
        padding: 0.4rem 0.8rem;
        border-radius: 6px;
        color: var(--text-muted);
        cursor: pointer;
        transition: background 0.3s;
    }
    .balance-card .account-number:hover {
        background: rgba(0, 0, 0, 0.4);
        color: var(--text-light);
    }

    /* Transaction Tabs */
    .transaction-tabs .nav-link {
        color: var(--text-muted);
        border: none;
        border-bottom: 2px solid transparent;
        transition: all 0.3s ease;
        flex: 1;
        text-align: center;
        font-weight: 600;
    }
    .transaction-tabs .nav-link.active {
        color: var(--primary-accent);
        background: none;
        border-bottom-color: var(--primary-accent);
    }
    .transaction-tabs .nav-link:hover:not(.active) {
        color: var(--text-light);
    }
    .tab-content .form-control, .tab-content .input-group-text {
        background: rgba(0, 0, 0, 0.2);
        border: 1px solid var(--glass-border);
        color: var(--text-light);
    }
    .tab-content .form-control:focus {
        background: rgba(0, 0, 0, 0.3);
        border-color: var(--primary-accent);
        box-shadow: 0 0 0 3px var(--primary-glow);
    }
    
    /* Table Styles */
    .table {
        color: var(--text-light);
    }
    .table thead th {
        color: var(--text-muted);
        border-bottom: 1px solid var(--glass-border);
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    .table tbody tr {
        transition: background-color 0.3s ease;
    }
    .table-hover tbody tr:hover {
        background-color: rgba(255, 255, 255, 0.03);
    }
    .table td, .table th {
        border-top: 1px solid var(--glass-border);
        padding: 1rem 1.5rem;
        vertical-align: middle;
    }
    .table-icon {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-right: 1rem;
    }
    .transaction-in { color: var(--success-color); background: var(--success-glow); }
    .transaction-out { color: var(--danger-color); background: var(--danger-glow); }

    .status-badge {
        padding: 0.4em 0.8em;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.8rem;
    }
    .status-approved { background: var(--success-glow); color: var(--success-color); }
    .status-rejected { background: var(--danger-glow); color: var(--danger-color); }
    .status-pending { background: var(--warning-glow); color: var(--warning-color); }
    
    /* Animations */
    @keyframes fadeInUp {
        from { transform: translateY(30px); opacity: 0; }
        to { transform: translateY(0); opacity: 1; }
    }
    @keyframes fadeInDown {
        from { transform: translateY(-20px); opacity: 0; }
        to { transform: translateY(0); opacity: 1; }
    }
</style>

<div class="container-fluid py-4 px-lg-5">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-5 dashboard-header">
        <div class="welcome-message mb-3 mb-md-0">
            <h1>Welcome Back, <%= user.first_name %>!</h1>
            <p>Your financial overview for <%= new Date().toLocaleDateString('en-US', { weekday: 'long', month: 'long', day: 'numeric' }) %>.</p>
        </div>
        <div class="header-actions d-flex gap-2">
            <% if (user && user.is_admin) { %>
                <a href="/admin/dashboard" class="btn btn-sm"><i class="fas fa-user-shield me-2"></i>Admin</a>
            <% } %>
            <a href="/account/joint/create" class="btn btn-sm"><i class="fas fa-user-plus me-2"></i>Create Joint</a>
            <a href="/user/joint/login" class="btn btn-sm"><i class="fas fa-users me-2"></i>Login to Joint</a>
            <a href="/user/logout" class="btn btn-sm"><i class="fas fa-sign-out-alt me-2"></i>Logout</a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="glass-card mb-4 balance-card" style="animation-delay: 0.2s;">
                <div class="card-body text-center p-4">
                    <p class="balance-label">Total Balance</p>
                    <h2 class="balance-amount" id="balanceAmount">$0.00</h2>
                    <div title="Click to copy account number" class="account-number" id="accountNumber" data-account="<%= account.account_number %>">
                        <span><i class="fas fa-hashtag fa-xs me-2"></i><%= account.account_number %></span>
                        <i class="fas fa-copy ms-2"></i>
                    </div>
                </div>
                 <div class="p-2"><canvas id="balanceChart" height="50"></canvas></div>
            </div>

            <div class="glass-card" style="animation-delay: 0.4s;">
                <div class="card-header"><i class="fas fa-exchange-alt"></i> Quick Actions</div>
                <div class="card-body p-3 transaction-tabs">
                    <ul class="nav nav-tabs nav-fill" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation"><button class="nav-link active" data-bs-toggle="tab" data-bs-target="#deposit-tab-pane"><i class="fas fa-arrow-down me-2"></i>Deposit</button></li>
                        <li class="nav-item" role="presentation"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#withdraw-tab-pane"><i class="fas fa-arrow-up me-2"></i>Withdraw</button></li>
                        <li class="nav-item" role="presentation"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#transfer-tab-pane"><i class="fas fa-paper-plane me-2"></i>Transfer</button></li>
                    </ul>
                    <div class="tab-content p-3" id="myTabContent">
                        <div class="tab-pane fade show active" id="deposit-tab-pane">
                            <form action="/account/deposit" method="POST">
                                <input type="hidden" name="accountId" value="<%= account.account_id %>">
                                <div class="input-group mb-3"><span class="input-group-text">$</span><input type="number" class="form-control" name="amount" placeholder="0.00" step="0.01" required min="0.01"></div>
                                <button type="submit" class="btn btn-primary w-100"><i class="fas fa-plus-circle me-2"></i>Confirm Deposit</button>
                            </form>
                        </div>
                        <div class="tab-pane fade" id="withdraw-tab-pane">
                            <form action="/account/withdraw" method="POST">
                                <input type="hidden" name="accountId" value="<%= account.account_id %>">
                                <div class="input-group mb-3"><span class="input-group-text">$</span><input type="number" class="form-control" name="amount" placeholder="0.00" step="0.01" required min="0.01"></div>
                                <button type="submit" class="btn btn-warning w-100"><i class="fas fa-minus-circle me-2"></i>Confirm Withdrawal</button>
                            </form>
                        </div>
                        <div class="tab-pane fade" id="transfer-tab-pane">
                             <form action="/account/transfer" method="POST">
                                <input type="hidden" name="fromAccountId" value="<%= account.account_id %>">
                                <div class="mb-3"><input type="text" class="form-control" name="toAccountNumber" placeholder="Recipient Account #" required></div>
                                <div class="input-group mb-3"><span class="input-group-text">$</span><input type="number" class="form-control" name="amount" placeholder="0.00" step="0.01" required min="0.01"></div>
                                <button type="submit" class="btn btn-info w-100"><i class="fas fa-check-circle me-2"></i>Send Transfer</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="glass-card mb-4" style="animation-delay: 0.6s;">
                <div class="card-header">
                    <i class="fas fa-history"></i> Recent Transactions
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead><tr><th>Details</th><th>Type</th><th>Date</th><th>Amount</th></tr></thead>
                            <tbody>
                                <% if (transactions.length === 0) { %>
                                    <tr><td colspan="4" class="text-center text-muted py-5">No transactions yet.</td></tr>
                                <% } else { transactions.slice(0, 5).forEach(tx => { %>
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="table-icon <%= tx.from_account_id === account.account_id ? 'transaction-out' : 'transaction-in' %>">
                                                    <i class="fas <%= tx.from_account_id === account.account_id ? 'fa-arrow-up' : 'fa-arrow-down' %>"></i>
                                                </div>
                                                <div>
                                                    <strong><%= tx.from_account_id === account.account_id ? 'Sent to' : 'Received from' %></strong>
                                                    <div class="text-muted small"><%= tx.transaction_type === 'TRANSFER' ? (tx.from_account_id === account.account_id ? tx.to_account_number : tx.from_account_number) : 'Self' %></div>
                                                </div>
                                            </div>
                                        </td>
                                        <td><%= tx.transaction_type %></td>
                                        <td><%= new Date(tx.timestamp).toLocaleDateString() %></td>
                                        <td class="fw-bold <%= tx.from_account_id === account.account_id ? 'text-danger' : 'text-success' %>">
                                            <%= tx.from_account_id === account.account_id ? '-' : '+' %> $<%= parseFloat(tx.amount).toFixed(2) %>
                                        </td>
                                    </tr>
                                <% }); } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

             <div class="glass-card" style="animation-delay: 0.8s;">
                <div class="card-header">
                    <i class="fas fa-file-invoice-dollar"></i> Loan Applications
                    <a href="/account/loans/apply" class="btn btn-sm btn-outline-primary ms-auto">Apply for Loan</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead><tr><th>Type</th><th>Amount</th><th>Date</th><th>Status</th></tr></thead>
                            <tbody>
                                <% if (loans.length === 0) { %>
                                    <tr><td colspan="4" class="text-center text-muted py-5">No loan applications found.</td></tr>
                                <% } else { loans.slice(0, 3).forEach(loan => { %>
                                    <tr>
                                        <td><strong><%= loan.loan_type %></strong></td>
                                        <td>$<%= parseFloat(loan.amount).toFixed(2) %></td>
                                        <td><%= new Date(loan.request_date).toLocaleDateString() %></td>
                                        <td><span class="status-badge status-<%= loan.status.toLowerCase() %>"><%= loan.status %></span></td>
                                    </tr>
                                <% }); } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
document.addEventListener('DOMContentLoaded', () => {
    // --- Balance Count-Up Animation ---
    const balanceEl = document.getElementById('balanceAmount');
    const finalBalance = parseFloat('<%= account.balance %>');
    let start = 0;
    const duration = 1500; // Animation duration in ms
    let startTime = null;

    function animateBalance(timestamp) {
        if (!startTime) startTime = timestamp;
        const progress = timestamp - startTime;
        const currentAmount = Math.min((progress / duration) * finalBalance, finalBalance);
        balanceEl.textContent = `$${currentAmount.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 })}`;
        
        if (progress < duration) {
            requestAnimationFrame(animateBalance);
        }
    }
    requestAnimationFrame(animateBalance);

    // --- Copy Account Number ---
    const accountEl = document.getElementById('accountNumber');
    accountEl.addEventListener('click', () => {
        navigator.clipboard.writeText(accountEl.dataset.account);
        const originalIcon = accountEl.querySelector('.fa-copy');
        const originalText = accountEl.querySelector('span');
        originalIcon.style.display = 'none';
        originalText.innerHTML = `<i class="fas fa-check me-2"></i>Copied!`;
        setTimeout(() => {
            originalText.innerHTML = `<i class="fas fa-hashtag fa-xs me-2"></i><%= account.account_number %>`;
            originalIcon.style.display = 'inline-block';
        }, 2000);
    });

    // --- Balance Sparkline Chart ---
    const ctx = document.getElementById('balanceChart').getContext('2d');
    const gradient = ctx.createLinearGradient(0, 0, 0, 50);
    gradient.addColorStop(0, 'rgba(102, 126, 234, 0.5)');
    gradient.addColorStop(1, 'rgba(102, 126, 234, 0)');

    new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['Day 1', 'Day 2', 'Day 3', 'Day 4', 'Day 5', 'Day 6', 'Today'],
            datasets: [{
                // Dummy data for visual representation
                data: [
                    finalBalance * 0.95, 
                    finalBalance * 0.97, 
                    finalBalance * 0.96, 
                    finalBalance * 0.98, 
                    finalBalance * 0.97, 
                    finalBalance * 0.99, 
                    finalBalance
                ],
                backgroundColor: gradient,
                borderColor: 'rgba(102, 126, 234, 1)',
                borderWidth: 2,
                pointRadius: 0,
                tension: 0.4,
                fill: true,
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: { legend: { display: false }, tooltip: { enabled: false } },
            scales: {
                x: { display: false },
                y: { display: false }
            }
        }
    });
});
</script>

<%- include('partials/footer') %>