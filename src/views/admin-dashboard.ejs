<%- include('partials/header') %>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap');
    :root {
        --dark-base: #0a0a0f;
        --dark-card: #1a1a2e;
        --glass-border: rgba(255, 255, 255, 0.08);
        --text-primary: #ffffff;
        --text-secondary: #a0a0b8;
        --accent-primary: #667eea;
        --accent-secondary: #764ba2;
        --accent-success: #00d4aa;
        --accent-warning: #ffa726;
        --accent-danger: #ef5350;
    }

    body {
        background: linear-gradient(135deg, #0a0a0f 0%, #14141f 50%, #0f0f1a 100%);
        color: var(--text-primary);
        font-family: 'Inter', sans-serif;
    }

    .command-center-header h1 {
        font-weight: 800;
        font-size: 2.75rem;
        background: linear-gradient(135deg, #ffffff 0%, #a0a0b8 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .btn-outline-secondary {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: white;
        border-radius: 12px;
        font-weight: 600;
        padding: 0.75rem 1.5rem;
    }

    .btn-outline-secondary:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: rgba(255, 255, 255, 0.2);
    }

    .glass-card {
        background: rgba(26, 26, 46, 0.6);
        backdrop-filter: blur(25px);
        border-radius: 20px;
        border: 1px solid var(--glass-border);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        transition: 0.3s ease;
    }

    .glass-card:hover {
        transform: translateY(-5px);
    }

    .table {
        color: var(--text-primary);
    }

    .table-hover tbody tr:hover {
        background: rgba(102, 126, 234, 0.05);
    }

    .card-title {
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .stat-card-original {
        background: var(--dark-card);
        border-radius: 20px;
        padding: 1.5rem;
        color: white;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
    }

    .bg-primary {
        background: linear-gradient(135deg, #667eea, #764ba2);
    }

    .bg-success {
        background: linear-gradient(135deg, #00d4aa, #00a582);
    }

    .bg-info {
        background: linear-gradient(135deg, #42a5f5, #2196f3);
    }

    .bg-warning {
        background: linear-gradient(135deg, #ffa726, #ff9800);
    }
</style>

<div class="container-fluid py-4 px-lg-5">

    <div class="d-flex justify-content-between align-items-center mb-4 command-center-header">
        <h1>Admin Command Center</h1>
        <div class="d-flex gap-3">
            <a href="/admin/insights" class="btn btn-outline-primary">Bank Insights</a>
            <a href="/user/logout" class="btn btn-outline-secondary">Logout</a>
        </div>
    </div>

    <!-- Statistics Row -->
    <div class="row mb-4 g-4">
        <div class="col-md-3">
            <div class="stat-card-original bg-primary">
                <h5 class="card-title">Total Users</h5>
                <p class="display-6 fw-bold"><%= stats.totalUsers %></p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card-original bg-success">
                <h5 class="card-title">Total Assets</h5>
                <p class="display-6 fw-bold">$<%= parseFloat(stats.totalAssets).toFixed(2) %></p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card-original bg-info">
                <h5 class="card-title">Total Accounts</h5>
                <p class="display-6 fw-bold"><%= stats.totalAccounts %></p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card-original bg-warning">
                <h5 class="card-title">Pending Loans</h5>
                <p class="display-6 fw-bold"><%= stats.pendingLoans %></p>
            </div>
        </div>
    </div>

    <!-- Search Bar -->
    <div class="glass-card mb-4 p-4">
        <h5 class="card-title">Search Account</h5>
        <form action="/admin/search" method="GET" class="d-flex">
            <input class="form-control me-2" type="search" name="accountNumber" placeholder="Enter Account Number" required>
            <button class="btn btn-outline-primary" type="submit">Search</button>
        </form>
    </div>

    <div class="row">
        <!-- Loan Management Section -->
        <div class="col-lg-8 mb-4">
            <div class="glass-card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5>Loan Applications</h5>
                    <div class="nav nav-tabs card-header-tabs" id="loanTabs" role="tablist">
                        <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#pending">Pending</button>
                        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#approved">Approved</button>
                        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#rejected">Rejected</button>
                    </div>
                </div>

                <div class="card-body">
                    <div class="tab-content" id="loanTabsContent">
                        <!-- Pending Loans -->
                        <div class="tab-pane fade show active" id="pending">
                            <table class="table table-hover">
                                <thead>
                                    <tr><th>Date</th><th>Applicant(s)</th><th>Amount</th><th class="text-end">Actions</th></tr>
                                </thead>
                                <tbody>
                                    <% const pendingLoans = allLoans.filter(l => l.status === 'PENDING'); %>
                                    <% if (pendingLoans.length === 0) { %>
                                        <tr><td colspan="4" class="text-center text-muted">No pending loans.</td></tr>
                                    <% } else { pendingLoans.forEach(loan => { %>
                                        <tr>
                                            <td><%= new Date(loan.request_date).toLocaleDateString() %></td>
                                            <td><%= loan.applicant_names %> <br><small class="text-muted"><%= loan.account_number %></small></td>
                                            <td>$<%= parseFloat(loan.amount).toFixed(2) %></td>
                                            <td class="text-end">
                                                <form action="/admin/loans/approve/<%= loan.loan_id %>" method="POST" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-success">Approve</button>
                                                </form>
                                                <form action="/admin/loans/reject/<%= loan.loan_id %>" method="POST" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-danger">Reject</button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% }); } %>
                                </tbody>
                            </table>
                        </div>

                        <!-- Approved Loans -->
                        <div class="tab-pane fade" id="approved">
                            <table class="table table-hover">
                                <thead><tr><th>Date</th><th>Applicant(s)</th><th>Amount</th></tr></thead>
                                <tbody>
                                    <% const approvedLoans = allLoans.filter(l => l.status === 'APPROVED'); %>
                                    <% if (approvedLoans.length === 0) { %>
                                        <tr><td colspan="3" class="text-center text-muted">No approved loans.</td></tr>
                                    <% } else { approvedLoans.forEach(loan => { %>
                                        <tr>
                                            <td><%= new Date(loan.decision_date).toLocaleDateString() %></td>
                                            <td><%= loan.applicant_names %> <br><small class="text-muted"><%= loan.account_number %></small></td>
                                            <td>$<%= parseFloat(loan.amount).toFixed(2) %></td>
                                        </tr>
                                    <% }); } %>
                                </tbody>
                            </table>
                        </div>

                        <!-- Rejected Loans -->
                        <div class="tab-pane fade" id="rejected">
                            <table class="table table-hover">
                                <thead><tr><th>Date</th><th>Applicant(s)</th><th>Amount</th></tr></thead>
                                <tbody>
                                    <% const rejectedLoans = allLoans.filter(l => l.status === 'REJECTED'); %>
                                    <% if (rejectedLoans.length === 0) { %>
                                        <tr><td colspan="3" class="text-center text-muted">No rejected loans.</td></tr>
                                    <% } else { rejectedLoans.forEach(loan => { %>
                                        <tr>
                                            <td><%= new Date(loan.decision_date).toLocaleDateString() %></td>
                                            <td><%= loan.applicant_names %> <br><small class="text-muted"><%= loan.account_number %></small></td>
                                            <td>$<%= parseFloat(loan.amount).toFixed(2) %></td>
                                        </tr>
                                    <% }); } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Transactions -->
        <div class="col-lg-4">
            <div class="glass-card p-3">
                <div class="card-header">
                    <h5>Recent Transactions</h5>
                </div>
                <ul class="list-group list-group-flush">
                    <% recentTransactions.forEach(tx => { %>
                        <li class="list-group-item bg-transparent text-light border-bottom">
                            <div class="d-flex justify-content-between">
                                <strong><%= tx.transaction_type %></strong>
                                <small class="text-muted"><%= new Date(tx.timestamp).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) %></small>
                            </div>
                            <p class="mb-1">$<%= parseFloat(tx.amount).toFixed(2) %></p>
                            <small class="text-muted">
                                <% if (tx.transaction_type === 'DEPOSIT' || tx.transaction_type === 'LOAN') { %>
                                    To: <%= tx.to_acc %>
                                <% } else if (tx.transaction_type === 'WITHDRAWAL') { %>
                                    From: <%= tx.from_acc %>
                                <% } else { %>
                                    <%= tx.from_acc %> â†’ <%= tx.to_acc %>
                                <% } %>
                            </small>
                        </li>
                    <% }); %>
                </ul>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
