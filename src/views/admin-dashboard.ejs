<%- include('partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2">Admin Command Center</h1>
    <a href="/user/logout" class="btn btn-secondary">Logout</a>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Total Users</h5>
                <p class="card-text fs-4"><%= stats.totalUsers %></p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Total Assets</h5>
                <p class="card-text fs-4">$<%= parseFloat(stats.totalAssets).toFixed(2) %></p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Total Accounts</h5>
                <p class="card-text fs-4"><%= stats.totalAccounts %></p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Pending Loans</h5>
                <p class="card-text fs-4"><%= stats.pendingLoans %></p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mb-4">
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title">Search for an Account</h5>
                <form action="/admin/search" method="GET" class="d-flex">
                    <input class="form-control me-2" type="search" name="accountNumber" placeholder="Enter Account Number" required>
                    <button class="btn btn-outline-primary" type="submit">Search</button>
                </form>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs" id="loanTabs" role="tablist">
                    <li class="nav-item" role="presentation"><button class="nav-link active" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button">Pending</button></li>
                    <li class="nav-item" role="presentation"><button class="nav-link" id="approved-tab" data-bs-toggle="tab" data-bs-target="#approved" type="button">Approved</button></li>
                    <li class="nav-item" role="presentation"><button class="nav-link" id="rejected-tab" data-bs-toggle="tab" data-bs-target="#rejected" type="button">Rejected</button></li>
                </ul>
            </div>
            <div class="card-body">
                <div class="tab-content" id="loanTabsContent">
                    <div class="tab-pane fade show active" id="pending" role="tabpanel">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead><tr><th>Date</th><th>Applicant(s)</th><th>Amount</th><th class="text-end">Actions</th></tr></thead>
                                <tbody>
                                    <% const pendingLoans = allLoans.filter(l => l.status === 'PENDING'); %>
                                    <% if(pendingLoans.length === 0) { %> 
                                        <tr><td colspan="4" class="text-center text-muted py-3">No pending applications.</td></tr> 
                                    <% } else { pendingLoans.forEach(loan => { %>
                                        <tr>
                                            <td><%= new Date(loan.request_date).toLocaleDateString() %></td>
                                            <td><%= loan.applicant_names %> <br><small class="text-muted"><%= loan.account_number %></small></td>
                                            <td>$<%= parseFloat(loan.amount).toFixed(2) %></td>
                                            <td class="text-end">
                                                <form action="/admin/loans/approve/<%= loan.loan_id %>" method="POST" class="d-inline"><button type="submit" class="btn btn-sm btn-success">Approve</button></form>
                                                <form action="/admin/loans/reject/<%= loan.loan_id %>" method="POST" class="d-inline"><button type="submit" class="btn btn-sm btn-danger">Reject</button></form>
                                            </td>
                                        </tr>
                                    <% }); } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="approved" role="tabpanel">
                         <div class="table-responsive">
                            <table class="table table-hover">
                                <thead><tr><th>Date</th><th>Applicant(s)</th><th>Amount</th></tr></thead>
                                <tbody>
                                    <% const approvedLoans = allLoans.filter(l => l.status === 'APPROVED'); %>
                                    <% if(approvedLoans.length === 0) { %> 
                                        <tr><td colspan="3" class="text-center text-muted py-3">No approved loans.</td></tr> 
                                    <% } else { approvedLoans.forEach(loan => { %>
                                        <tr>
                                            <td><%= new Date(loan.decision_date).toLocaleDateString() %></td>
                                            <td><%= loan.applicant_names %> <br><small class="text-muted"><%= loan.account_number %></small></td>
                                            <td>$<%= parseFloat(loan.amount).toFixed(2) %></td>
                                        </tr>
                                    <% }); } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="rejected" role="tabpanel">
                         <div class="table-responsive">
                            <table class="table table-hover">
                                <thead><tr><th>Date</th><th>Applicant(s)</th><th>Amount</th></tr></thead>
                                <tbody>
                                    <% const rejectedLoans = allLoans.filter(l => l.status === 'REJECTED'); %>
                                    <% if(rejectedLoans.length === 0) { %> 
                                        <tr><td colspan="3" class="text-center text-muted py-3">No rejected loans.</td></tr> 
                                    <% } else { rejectedLoans.forEach(loan => { %>
                                        <tr>
                                            <td><%= new Date(loan.decision_date).toLocaleDateString() %></td>
                                            <td><%= loan.applicant_names %> <br><small class="text-muted"><%= loan.account_number %></small></td>
                                            <td>$<%= parseFloat(loan.amount).toFixed(2) %></td>
                                        </tr>
                                    <% }); } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm">
            <div class="card-header">Recent System Transactions</div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <% recentTransactions.forEach(tx => { %>
                        <li class="list-group-item">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1"><%= tx.transaction_type %></h6>
                                <small class="text-muted"><%= new Date(tx.timestamp).toLocaleTimeString() %></small>
                            </div>
                            <p class="mb-1">$<%= parseFloat(tx.amount).toFixed(2) %></p>
                            <small class="text-muted">
                                <% if (tx.transaction_type === 'DEPOSIT' || tx.transaction_type === 'LOAN') { %>
                                    To: <%= tx.to_acc %>
                                <% } else if (tx.transaction_type === 'WITHDRAWAL') { %>
                                    From: <%= tx.from_acc %>
                                <% } else { %>
                                    <%= tx.from_acc %> â†’ <%= tx.to_acc %>
                                <% } %>
                            </small>
                        </li>
                    <% }); %>
                </ul>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>