<%- include('partials/header') %>

<style>
    /* --- State-of-the-Art Admin Command Center UI --- */
    :root {
        --dark-bg: #10101a;
        --glass-bg: rgba(26, 26, 46, 0.7);
        --glass-border: rgba(255, 255, 255, 0.1);
        --text-light: #f0f0f0;
        --text-muted: #a0a0b0;
        --primary-accent: #667eea;
        --primary-glow: rgba(102, 126, 234, 0.3);
    }

    body {
        background-color: var(--dark-bg);
        color: var(--text-light);
        font-family: 'Inter', sans-serif;
    }

    /* Page Header */
    .command-center-header h1 {
        font-weight: 800;
        font-size: 2.2rem;
        color: var(--text-light);
    }

    /* Glass Card Style */
    .glass-card {
        background: var(--glass-bg);
        backdrop-filter: blur(20px);
        border: 1px solid var(--glass-border);
        border-radius: 1rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
        animation: fadeInUp 0.8s ease-out forwards;
        opacity: 0;
        color: var(--text-light); /* Ensure text inside is light */
    }

    .card-header {
        background-color: transparent;
        border-bottom: 1px solid var(--glass-border) !important;
        font-weight: 600;
        color: var(--text-light);
    }

    .card-title {
        color: var(--text-light);
    }

    .card-body {
        color: var(--text-muted);
    }

    /* Stat Cards from your original code, but styled */
    .stat-card-original {
        border-radius: 1rem;
        color: white;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .stat-card-original:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.3);
    }

    .bg-primary { background-color: #5865f2 !important; }
    .bg-success { background-color: #57f287 !important; }
    .bg-info { background-color: #3498db !important; }
    .bg-warning { background-color: #f1c40f !important; }

    /* Loan Management Tabs */
    .nav-tabs {
        border-bottom: 1px solid var(--glass-border);
    }
    .nav-tabs .nav-link {
        background: none;
        border: none !important;
        color: var(--text-muted);
        font-weight: 600;
    }
    .nav-tabs .nav-link.active {
        color: var(--primary-accent);
        background-color: transparent !important;
        border-bottom: 2px solid var(--primary-accent) !important;
    }
    
    /* Table Styles */
    .table { color: var(--text-light); }
    .table-hover > tbody > tr:hover > * {
        color: var(--text-light);
        background-color: rgba(255, 255, 255, 0.05);
    }
    .table > :not(caption) > * > * {
        border-bottom-width: 1px;
        border-color: var(--glass-border);
    }

    /* Recent Transactions List */
    .list-group-item {
        background-color: transparent;
        border-color: var(--glass-border);
        color: var(--text-light);
    }

    .btn-outline-primary {
        color: var(--primary-accent);
        border-color: var(--primary-accent);
    }
    .btn-outline-primary:hover {
        background-color: var(--primary-accent);
        color: white;
    }
    
    @keyframes fadeInUp {
        from { transform: translateY(30px); opacity: 0; }
        to { transform: translateY(0); opacity: 1; }
    }
</style>

<div class="container-fluid py-4 px-lg-5">
    <div class="d-flex justify-content-between align-items-center mb-4 command-center-header">
        <h1 class="h2">Admin Command Center</h1>
        <a href="/user/logout" class="btn btn-outline-secondary">Logout</a>
    </div>

    <div class="row mb-4 g-4">
        <div class="col-md-3" style="animation-delay: 0.1s; opacity: 0;" data-animation="fadeInUp">
            <div class="card text-white bg-primary shadow-sm stat-card-original">
                <div class="card-body">
                    <h5 class="card-title">Total Users</h5>
                    <p class="card-text fs-4"><%= stats.totalUsers %></p>
                </div>
            </div>
        </div>
        <div class="col-md-3" style="animation-delay: 0.2s; opacity: 0;" data-animation="fadeInUp">
            <div class="card text-white bg-success shadow-sm stat-card-original">
                <div class="card-body">
                    <h5 class="card-title">Total Assets</h5>
                    <p class="card-text fs-4">$<%= parseFloat(stats.totalAssets).toFixed(2) %></p>
                </div>
            </div>
        </div>
        <div class="col-md-3" style="animation-delay: 0.3s; opacity: 0;" data-animation="fadeInUp">
            <div class="card text-white bg-info shadow-sm stat-card-original">
                <div class="card-body">
                    <h5 class="card-title">Total Accounts</h5>
                    <p class="card-text fs-4"><%= stats.totalAccounts %></p>
                </div>
            </div>
        </div>
        <div class="col-md-3" style="animation-delay: 0.4s; opacity: 0;" data-animation="fadeInUp">
            <div class="card text-white bg-warning shadow-sm stat-card-original">
                <div class="card-body">
                    <h5 class="card-title">Pending Loans</h5>
                    <p class="card-text fs-4"><%= stats.pendingLoans %></p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 mb-4">
            <div class="glass-card mb-4" style="animation-delay: 0.5s;">
                <div class="card-body">
                    <h5 class="card-title">Search for an Account</h5>
                    <form action="/admin/search" method="GET" class="d-flex">
                        <input class="form-control me-2" type="search" name="accountNumber" placeholder="Enter Account Number" required>
                        <button class="btn btn-outline-primary" type="submit">Search</button>
                    </form>
                </div>
            </div>

            <div class="glass-card" style="animation-delay: 0.6s;">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs" id="loanTabs" role="tablist">
                        <li class="nav-item" role="presentation"><button class="nav-link active" data-bs-toggle="tab" data-bs-target="#pending">Pending</button></li>
                        <li class="nav-item" role="presentation"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#approved">Approved</button></li>
                        <li class="nav-item" role="presentation"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#rejected">Rejected</button></li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content" id="loanTabsContent">
                        <div class="tab-pane fade show active" id="pending" role="tabpanel">
                             <div class="table-responsive">
                                 <table class="table table-hover">
                                     <thead><tr><th>Date</th><th>Applicant(s)</th><th>Amount</th><th class="text-end">Actions</th></tr></thead>
                                     <tbody>
                                         <% const pendingLoans = allLoans.filter(l => l.status === 'PENDING'); %>
                                         <% if(pendingLoans.length === 0) { %> 
                                             <tr><td colspan="4" class="text-center text-muted py-3">No pending applications.</td></tr> 
                                         <% } else { pendingLoans.forEach(loan => { %>
                                             <tr>
                                                 <td><%= new Date(loan.request_date).toLocaleDateString() %></td>
                                                 <td><%= loan.applicant_names %> <br><small class="text-muted"><%= loan.account_number %></small></td>
                                                 <td>$<%= parseFloat(loan.amount).toFixed(2) %></td>
                                                 <td class="text-end">
                                                     <form action="/admin/loans/approve/<%= loan.loan_id %>" method="POST" class="d-inline"><button type="submit" class="btn btn-sm btn-success">Approve</button></form>
                                                     <form action="/admin/loans/reject/<%= loan.loan_id %>" method="POST" class="d-inline"><button type="submit" class="btn btn-sm btn-danger">Reject</button></form>
                                                 </td>
                                             </tr>
                                         <% }); } %>
                                     </tbody>
                                 </table>
                             </div>
                        </div>
                        <div class="tab-pane fade" id="approved" role="tabpanel">
                             <div class="table-responsive">
                                 <table class="table table-hover">
                                     <thead><tr><th>Date</th><th>Applicant(s)</th><th>Amount</th></tr></thead>
                                     <tbody>
                                         <% const approvedLoans = allLoans.filter(l => l.status === 'APPROVED'); %>
                                         <% if(approvedLoans.length === 0) { %> 
                                             <tr><td colspan="3" class="text-center text-muted py-3">No approved loans.</td></tr> 
                                         <% } else { approvedLoans.forEach(loan => { %>
                                             <tr>
                                                 <td><%= new Date(loan.decision_date).toLocaleDateString() %></td>
                                                 <td><%= loan.applicant_names %> <br><small class="text-muted"><%= loan.account_number %></small></td>
                                                 <td>$<%= parseFloat(loan.amount).toFixed(2) %></td>
                                             </tr>
                                         <% }); } %>
                                     </tbody>
                                 </table>
                             </div>
                        </div>
                        <div class="tab-pane fade" id="rejected" role="tabpanel">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                     <thead><tr><th>Date</th><th>Applicant(s)</th><th>Amount</th></tr></thead>
                                     <tbody>
                                         <% const rejectedLoans = allLoans.filter(l => l.status === 'REJECTED'); %>
                                         <% if(rejectedLoans.length === 0) { %> 
                                             <tr><td colspan="3" class="text-center text-muted py-3">No rejected loans.</td></tr> 
                                         <% } else { rejectedLoans.forEach(loan => { %>
                                             <tr>
                                                 <td><%= new Date(loan.decision_date).toLocaleDateString() %></td>
                                                 <td><%= loan.applicant_names %> <br><small class="text-muted"><%= loan.account_number %></small></td>
                                                 <td>$<%= parseFloat(loan.amount).toFixed(2) %></td>
                                             </tr>
                                         <% }); } %>
                                     </tbody>
                                 </table>
                             </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="glass-card" style="animation-delay: 0.7s;">
                <div class="card-header">Recent System Transactions</div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <% recentTransactions.forEach(tx => { %>
                            <li class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1"><%= tx.transaction_type %></h6>
                                    <small class="text-muted"><%= new Date(tx.timestamp).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %></small>
                                </div>
                                <p class="mb-1">$<%= parseFloat(tx.amount).toFixed(2) %></p>
                                <small class="text-muted">
                                    <% if (tx.transaction_type === 'DEPOSIT' || tx.transaction_type === 'LOAN') { %>
                                        To: <%= tx.to_acc %>
                                    <% } else if (tx.transaction_type === 'WITHDRAWAL') { %>
                                        From: <%= tx.from_acc %>
                                    <% } else { %>
                                        <%= tx.from_acc %> &rarr; <%= tx.to_acc %>
                                    <% } %>
                                </small>
                            </li>
                        <% }); %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Script to apply animations as elements scroll into view
document.addEventListener("DOMContentLoaded", function() {
  const animatedElements = document.querySelectorAll('[data-animation="fadeInUp"]');
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.opacity = '1';
        entry.target.style.animation = 'fadeInUp 0.8s ease-out forwards';
        observer.unobserve(entry.target);
      }
    });
  }, { threshold: 0.1 });

  animatedElements.forEach(el => {
    observer.observe(el);
  });
});
</script>

<%- include('partials/footer') %>